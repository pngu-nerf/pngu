---
import { getR2Data } from '../lib/r2';
import { R2_DATA_BASE } from '../constants';
import BackgroundEffects from '../components/BackgroundEffects.astro';

const projects = await getR2Data("PNGU-Blaster-Data-main/");
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Technical Data | PNGU</title>

		<style>
            * { box-sizing: border-box; }

			body {
				font-family: sans-serif;
				padding: 2rem;
				text-align: center;
				max-width: 900px;
				margin: 0 auto;
				color: #ffffff;
                background-color: #0f0f0f;
			}
            
            #bg-layer {
                position: fixed;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background-color: #0f0f0f;
                z-index: -2;
            }
			
			.header-box { text-align: center; margin-bottom: 3rem; }
			h1 { color: #ffffff; font-size: 2.5rem; margin: 0 0 0.5rem 0; }
			.subtitle { color: #a0a0a0; font-size: 1.1rem; }

            /* Navigation Buttons - Stacked & Pill-Shaped */
			.nav-links {
				margin-top: 2rem;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
			}

			.nav-links a {
				text-decoration: none;
                display: inline-block;
				font-size: 0.75rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				color: rgba(255, 255, 255, 0.4);
				padding: 10px 24px;
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 20px; /* Matches homepage pill shape */
				background: rgba(255, 255, 255, 0.03);
				backdrop-filter: blur(4px);
				transition: all 0.3s ease;
                width: 220px;
			}

            .nav-links a:hover {
                color: rgba(255, 255, 255, 1);
				background: rgba(255, 255, 255, 0.1);
				border-color: rgba(255, 255, 255, 0.3);
				transform: translateY(-1px);
            }

            /* Content Containers */
			.content-box {
				background-color: rgba(40, 40, 40, 0.4); 
                backdrop-filter: blur(20px) saturate(120%);
                -webkit-backdrop-filter: blur(20px) saturate(120%);
                border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 16px;
				padding: 2rem;
				width: 100%;
				margin: 2rem auto; 
				text-align: left;
			}
            
            h2 { 
                margin-top: 0;
                font-size: 1.5rem;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                padding-bottom: 10px;
                margin-bottom: 20px;
            }

            /* Collapsible File Items */
            .file-list { display: flex; flex-direction: column; gap: 12px; }

            .file-row {
                background-color: rgba(26, 26, 26, 0.6);
                border: 1px solid rgba(255,255,255,0.05);
                border-radius: 12px;
                overflow: hidden;
            }

            .row-main {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 12px 16px;
            }

            .file-info {
                display: flex;
                align-items: center;
                gap: 12px;
                flex: 1;
            }

            .file-name { font-weight: 500; font-size: 0.95rem; }

            /* Direct Download Button (Next to name) */
            .direct-dl {
                color: rgba(255,255,255,0.4);
                text-decoration: none;
                font-size: 0.7rem;
                padding: 4px 10px;
                border: 1px solid rgba(255,255,255,0.1);
                border-radius: 6px;
                transition: all 0.2s;
            }
            .direct-dl:hover {
                color: #fff;
                background: rgba(255,255,255,0.1);
                border-color: rgba(255,255,255,0.3);
            }

            /* Dropdown Summary */
            summary {
                cursor: pointer;
                list-style: none;
                padding: 12px;
                border-left: 1px solid rgba(255,255,255,0.1);
                color: #666;
                transition: all 0.2s;
            }
            summary:hover { color: #fff; background: rgba(255,255,255,0.02); }
            summary::-webkit-details-marker { display: none; }

            summary::after {
                content: 'PREVIEW ▼';
                font-size: 0.65rem;
                font-weight: 800;
                letter-spacing: 0.05em;
            }

            details[open] summary { color: #fff; background: rgba(255,255,255,0.05); }

            /* Inner Content */
            .preview-wrap {
                padding: 20px;
                background: rgba(0,0,0,0.2);
                animation: slideIn 0.3s ease-out;
            }

            .iframe-container {
                width: 100%;
                height: 500px;
                border-radius: 8px;
                overflow: hidden;
                background: #fff;
                border: 1px solid rgba(0,0,0,0.2);
            }

            iframe { width: 100%; height: 100%; border: none; }

            .footer-meta {
                margin-top: 4rem;
                opacity: 0.3;
                font-size: 0.7rem;
                letter-spacing: 0.1em;
                padding-bottom: 3rem;
                text-transform: uppercase;
            }

            @keyframes slideIn {
                from { opacity: 0; transform: translateY(-5px); }
                to { opacity: 1; transform: translateY(0); }
            }

			@media (max-width: 600px) {
				body { padding: 1rem; }
				h1 { font-size: 1.8rem; }
                .nav-links a { width: 90%; }
                .row-main { flex-direction: column; align-items: flex-start; gap: 10px; }
                summary { border-left: none; border-top: 1px solid rgba(255,255,255,0.1); width: 100%; text-align: center; }
                .iframe-container { height: 350px; }
			}
		</style>
	</head>
	<body>
        <div id="bg-layer"></div>
        <BackgroundEffects />

        <div class="header-box">
			<h1>Technical Data</h1>
			<p class="subtitle">Documentation Repository</p>
			<div class="nav-links">
                <a href="/">← Back</a>
                <a href="https://lite.pngu.info/data">Lite Version</a>
            </div>
		</div>

        {projects.length === 0 ? (
            <div class="content-box" style="text-align: center;">
                <p style="color: #666; font-size: 0.8rem; letter-spacing: 0.1em;">INITIALIZING CLUSTER...</p>
            </div>
        ) : (
            projects.map((project: any) => (
                <div class="content-box">
                    <h2>{project.displayName}</h2>
                    <div class="file-list">
                        {project.files.map((fileName: string) => {
                            const rawUrl = `${R2_DATA_BASE}/${encodeURIComponent(project.folderName)}/${encodeURIComponent(fileName)}`;
                            const previewUrl = `https://view.officeapps.live.com/op/embed.aspx?src=${encodeURIComponent(rawUrl)}`;

                            return (
                                <div class="file-row">
                                    <div class="row-main">
                                        <div class="file-info">
                                            <span class="file-name">{fileName}</span>
                                            <a href={rawUrl} class="direct-dl" download>DL</a>
                                        </div>
                                        <details class="file-dropdown">
                                            <summary></summary>
                                            <div class="preview-wrap">
                                                <div class="iframe-container">
                                                    <iframe 
                                                        src={previewUrl} 
                                                        title={`Preview of ${fileName}`} 
                                                        loading="lazy"
                                                    ></iframe>
                                                </div>
                                            </div>
                                        </details>
                                    </div>
                                </div>
                            );
                        })}
                    </div>
                </div>
            ))
        )}

        <footer class="footer-meta">
            © {currentYear} pngu
        </footer>
	</body>
</html>
