---
import { getR2Data } from '../lib/r2';
import { R2_DATA_BASE } from '../constants';
import BackgroundEffects from '../components/BackgroundEffects.astro';

const projects = await getR2Data("PNGU-Blaster-Data-main/");
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Technical Data | PNGU</title>

		<style>
            * { box-sizing: border-box; }

			body {
				font-family: sans-serif;
				padding: 2rem;
				text-align: center;
				max-width: 900px;
				margin: 0 auto;
				color: #ffffff;
                background-color: #0f0f0f;
			}
            
            #bg-layer {
                position: fixed;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background-color: #0f0f0f;
                z-index: -2;
            }
			
			.header-box { text-align: center; margin-bottom: 3rem; }
			h1 { color: #ffffff; font-size: 2.5rem; margin: 0 0 0.5rem 0; }
			.subtitle { color: #a0a0a0; font-size: 1.1rem; }

            /* Navigation Buttons - Stacked Pills */
			.nav-links {
				margin-top: 2rem;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
			}

			.nav-links a {
				text-decoration: none;
                display: inline-block;
				font-size: 0.75rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				color: rgba(255, 255, 255, 0.4);
				padding: 12px 28px;
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 25px; 
				background: rgba(255, 255, 255, 0.03);
				backdrop-filter: blur(4px);
				transition: all 0.3s ease;
                width: 240px;
			}

            .nav-links a:hover {
                color: rgba(255, 255, 255, 1);
				background: rgba(255, 255, 255, 0.1);
				border-color: rgba(255, 255, 255, 0.3);
				transform: translateY(-2px);
            }

            /* Content Containers */
			.content-box {
				background-color: rgba(40, 40, 40, 0.4); 
                backdrop-filter: blur(20px) saturate(120%);
                -webkit-backdrop-filter: blur(20px) saturate(120%);
                border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 16px;
				padding: 2rem;
				width: 100%;
				margin: 2rem auto; 
				text-align: left;
			}
            
            h2 { 
                margin-top: 0;
                font-size: 1.5rem;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                padding-bottom: 10px;
                margin-bottom: 25px;
            }

            /* Full-Bar Dropdown Style */
            .file-list { display: flex; flex-direction: column; gap: 16px; }

            details.file-dropdown {
                background-color: rgba(30, 30, 30, 0.4);
                border: 1px solid rgba(255,255,255,0.08);
                border-radius: 12px;
                overflow: hidden;
                transition: all 0.3s ease;
            }

            details.file-dropdown[open] {
                border-color: rgba(255,255,255,0.2);
                background-color: rgba(45, 45, 45, 0.4);
            }

            /* The "Bar" */
            summary {
                padding: 18px 24px;
                cursor: pointer;
                list-style: none;
                display: flex;
                flex-direction: column; /* Stacked content */
                gap: 12px;
                user-select: none;
            }
            
            summary::-webkit-details-marker { display: none; }

            /* Top row of the summary */
            .summary-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                width: 100%;
            }

            .file-name { font-weight: 600; font-size: 1.1rem; color: #fff; }

            /* Preview Indicator */
            .preview-text {
                font-size: 0.65rem;
                font-weight: 800;
                letter-spacing: 0.1em;
                color: #666;
                transition: color 0.3s ease;
            }

            details[open] .preview-text { color: #fff; }

            /* Enlarged Download Button */
            .download-btn {
                color: #ffffff;
                text-decoration: none;
                font-size: 0.8rem;
                font-weight: 700;
                padding: 10px 20px;
                border: 1px solid #ffffff;
                border-radius: 8px;
                background: rgba(255,255,255,0.05);
                transition: all 0.2s ease;
                display: inline-block;
                text-align: center;
                width: fit-content;
            }

            .download-btn:hover { 
                background: #fff; 
                color: #000; 
                transform: scale(1.02);
            }

            /* Preview Content */
            .preview-wrap {
                padding: 0 24px 24px 24px;
                animation: slideIn 0.3s ease-out;
            }

            .iframe-container {
                width: 100%;
                height: 600px;
                border-radius: 8px;
                overflow: hidden;
                background: #fff;
                border: 1px solid rgba(255,255,255,0.1);
            }

            iframe { width: 100%; height: 100%; border: none; }

            .footer-meta {
                margin-top: 5rem;
                opacity: 0.3;
                font-size: 0.75rem;
                letter-spacing: 0.15em;
                padding-bottom: 4rem;
                text-transform: uppercase;
            }

            @keyframes slideIn {
                from { opacity: 0; transform: translateY(-8px); }
                to { opacity: 1; transform: translateY(0); }
            }

			@media (max-width: 600px) {
				body { padding: 1.5rem 1rem; }
				h1 { font-size: 2rem; }
                .nav-links a { width: 100%; }
                .content-box { padding: 1.5rem; }
                .file-name { font-size: 1rem; }
                .download-btn { width: 100%; } /* Full width button on mobile */
                .iframe-container { height: 400px; }
			}
		</style>
	</head>
	<body>
        <div id="bg-layer"></div>
        <BackgroundEffects />

        <div class="header-box">
			<h1>Technical Data</h1>
			<p class="subtitle">Documentation & Spreadsheets</p>
			<div class="nav-links">
                <a href="/">← Back</a>
                <a href="https://lite.pngu.info/data">Lite Version</a>
            </div>
		</div>

        {projects.length === 0 ? (
            <div class="content-box" style="text-align: center;">
                <p style="color: #444; font-size: 0.8rem; letter-spacing: 0.1em;">CONNECTING TO CLUSTER...</p>
            </div>
        ) : (
            projects.map((project: any) => (
                <div class="content-box">
                    <h2>{project.displayName}</h2>
                    <div class="file-list">
                        {project.files.map((fileName: string) => {
                            const rawUrl = `${R2_DATA_BASE}/${encodeURIComponent(project.folderName)}/${encodeURIComponent(fileName)}`;
                            const previewUrl = `https://view.officeapps.live.com/op/embed.aspx?src=${encodeURIComponent(rawUrl)}`;

                            return (
                                <details class="file-dropdown">
                                    <summary>
                                        <div class="summary-header">
                                            <span class="file-name">{fileName}</span>
                                            <span class="preview-text">PREVIEW ▼</span>
                                        </div>
                                        <a 
                                          href={rawUrl} 
                                          class="download-btn" 
                                          download 
                                          onclick="event.stopPropagation();"
                                        >
                                          Download Asset
                                        </a>
                                    </summary>
                                    <div class="preview-wrap">
                                        <div class="iframe-container">
                                            <iframe 
                                                src={previewUrl} 
                                                title={`Preview of ${fileName}`} 
                                                loading="lazy"
                                            ></iframe>
                                        </div>
                                    </div>
                                </details>
                            );
                        })}
                    </div>
                </div>
            ))
        )}

        <footer class="footer-meta">
            © {currentYear} pngu
        </footer>
	</body>
</html>
