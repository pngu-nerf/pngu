// src/pages/data.astro
export const prerender = false;

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-Blaster-Data'; // Updated Repo
const BRANCH = 'main';

// --- Caching ---
Astro.response.headers.set('Cache-Control', 'public, max-age=1000, s-maxage=1000');

// --- Types ---
type FileItem = {
  name: string;
  path: string;
  downloadUrl: string;
  previewUrl: string;
};

type ProjectItem = {
  title: string;
  files: FileItem[];
};

// --- Variables ---
let errorMessage = "";
let projectList: ProjectItem[] = [];
let projects: Record<string, ProjectItem> = {};

// --- Helper Functions ---
async function getRepoFiles() {
  const apiUrl = `https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`;
  
  try {
    const response = await fetch(apiUrl, {
      headers: {
        'User-Agent': 'PNGU-Website',
        'Accept': 'application/vnd.github.v3+json',
        // 'Authorization': `token ${import.meta.env.GITHUB_TOKEN}` // Uncomment if using token
      }
    });

    if (!response.ok) {
      if (response.status === 403) throw new Error("GitHub Rate Limit Exceeded.");
      if (response.status === 404) throw new Error("Repository not found.");
      throw new Error(`GitHub API Error: ${response.status}`);
    }

    return await response.json();
  } catch (e: any) {
    console.error("Fetch Error:", e.message);
    throw e;
  }
}

// --- Main Logic ---
try {
  const data = await getRepoFiles();

  if (data && data.tree) {
    for (const item of data.tree) {
      if (item.type === 'blob') {
        const pathParts = item.path.split('/');
        
        // Ensure it is inside a subfolder
        if (pathParts.length > 1) {
          const folderName = pathParts[0];
          const fileName = pathParts[pathParts.length - 1];
          const lowerName = fileName.toLowerCase();

          // Initialize Project
          if (!projects[folderName]) {
            projects[folderName] = {
              title: folderName,
              files: []
            };
          }

          // Check for Excel or Word files
          if (lowerName.endsWith('.xlsx') || lowerName.endsWith('.xls') || 
              lowerName.endsWith('.docx') || lowerName.endsWith('.doc')) {
            
            const rawUrl = `https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${encodeURIComponent(item.path)}`;
            
            // Generate Microsoft Office Viewer URL
            const officeViewerUrl = `https://view.officeapps.live.com/op/embed.aspx?src=${encodeURIComponent(rawUrl)}`;

            projects[folderName].files.push({
              name: fileName,
              path: item.path,
              downloadUrl: rawUrl,
              previewUrl: officeViewerUrl
            });
          }
        }
      }
    }

    // Sort files and remove empty folders
    projectList = Object.values(projects)
        .map(p => {
            p.files.sort((a, b) => a.name.localeCompare(b.name));
            return p;
        })
        .filter(p => p.files.length > 0);

  } else {
      errorMessage = "Received empty data from GitHub.";
  }
} catch (error: any) {
  errorMessage = error.message;
}
