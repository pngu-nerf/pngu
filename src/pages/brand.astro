---
import MainLayout from '../layouts/MainLayout.astro';
import PageHeader from '../components/PageHeader.astro';
import FileItem from '../components/FileItem.astro';

const assets = [...];
---

<MainLayout title="Brand">
  <PageHeader title="Brand Assets" subtitle="Logos, Banners & Fonts" />

  <div class="content-box">
    <h2>Downloads</h2>
    <div class="file-list">
      {assets.map((asset) => (
        <FileItem name={asset.name} downloadUrl={asset.path} previewType={asset.type === 'image' ? 'image' : 'none'}>
          {asset.type === 'image' ? (
            <div class="preview-container">
               <img src={asset.path} alt="" loading="lazy" />
            </div>
          ) : (
            <p class="no-preview">Preview not available.</p>
          )}
        </FileItem>
      ))}
    </div>
  </div>
</MainLayout>

<style>
  /* Only put the "Checkerboard background" CSS for the preview-container here */
</style>
