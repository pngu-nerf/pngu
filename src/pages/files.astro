import BackgroundEffects from '../components/BackgroundEffects.astro';

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-3D-Files';
const BRANCH = 'main';
const currentYear = new Date().getFullYear();

// --- Logic: Fetch from GitHub ---
let projects: any[] = [];
try {
  const apiUrl = `https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`;
  const response = await fetch(apiUrl, {
    headers: { 'User-Agent': 'PNGU-Website', 'Accept': 'application/vnd.github.v3+json' }
  });
  const data = await response.json();

  if (data && data.tree) {
    const projectMap: Record<string, any> = {};
    for (const item of data.tree) {
      if (item.type === 'blob' && item.path.toLowerCase().endsWith('.stl')) {
        const pathParts = item.path.split('/');
        if (pathParts.length > 1) {
          const folderName = pathParts[0];
          const fileName = pathParts[pathParts.length - 1];
          if (!projectMap[folderName]) {
            projectMap[folderName] = { title: folderName, files: [] };
          }
          const safePath = item.path.split('/').map(encodeURIComponent).join('/');
          projectMap[folderName].files.push({
            name: fileName,
            url: `https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${safePath}`
          });
        }
      }
    }
    projects = Object.values(projectMap).sort((a, b) => a.title.localeCompare(b.title));
  }
} catch (e) {
  console.error(e);
}

// Group by First Letter
const grouped = projects.reduce((acc, project) => {
  const char = project.title[0].toUpperCase();
  if (!acc[char]) acc[char] = [];
  acc[char].push(project);
  return acc;
}, {});

const sortedLetters = Object.keys(grouped).sort();
