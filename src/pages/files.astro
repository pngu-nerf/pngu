// src/pages/files.astro
import BackgroundEffects from '../components/BackgroundEffects.astro';

export const prerender = false;

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-3D-Files';
const BRANCH = 'main';

// --- Caching ---
Astro.response.headers.set('Cache-Control', 'public, max-age=1000, s-maxage=1000');

// --- Types ---
type FileItem = {
  name: string;
  path: string;
  url: string;
};

type ProjectItem = {
  title: string;
  description: string;
  printablesUrl: string | null;
  files: FileItem[];
};

// --- Variables ---
let errorMessage = "";
let projects: Record<string, ProjectItem> = {};
let projectList: ProjectItem[] = [];

// --- Helper Functions ---
async function getRepoFiles() {
  const apiUrl = `https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`;

  try {
    const response = await fetch(apiUrl, {
      headers: {
        'User-Agent': 'PNGU-Website',
        'Accept': 'application/vnd.github.v3+json'
      }
    });

    if (!response.ok) {
      if (response.status === 403) throw new Error("GitHub Rate Limit Exceeded. Try refreshing the page or waiting a few minutes.");
      if (response.status === 404) throw new Error("Repository not found.");
      throw new Error(`GitHub API Error: ${response.status}`);
    }

    return await response.json();
  } catch (e: any) {
    console.error("Fetch Error:", e.message);
    throw e;
  }
}

async function getPrintablesDescription(url: string) {
  if (!url) return "No description available.";
  try {
    const res = await fetch(url, { headers: { 'User-Agent': 'PNGU-Website' } });
    if (!res.ok) return "Could not fetch description.";
    
    const html = await res.text();
    const match = html.match(/<meta\s+name="description"\s+content="([^"]*)"/i) || 
                  html.match(/<meta\s+property="og:description"\s+content="([^"]*)"/i);
    
    if (match && match[1]) {
        return match[1].replace(/&quot;/g, '"').replace(/&#39;/g, "'");
    }
    return "Could not load description.";
  } catch (e) {
    return "Error loading description.";
  }
}

// --- Main Logic ---
try {
  const data = await getRepoFiles();

  if (data && data.tree) {
    // 1. Group files by Folder
    for (const item of data.tree) {
      if (item.type === 'blob') { 
        const pathParts = item.path.split('/');
        
        if (pathParts.length > 1) {
          const folderName = pathParts[0];
          const fileName = pathParts[pathParts.length - 1];

          if (!projects[folderName]) {
            projects[folderName] = {
              title: folderName,
              description: "Loading...",
              printablesUrl: null,
              files: []
            };
          }

          if (fileName.toLowerCase().endsWith('.stl')) {
            const safePath = item.path.split('/').map(encodeURIComponent).join('/');
            
            projects[folderName].files.push({
              name: fileName,
              path: item.path,
              url: `https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${safePath}` 
            });
          }
          
          if (fileName.toLowerCase().includes('link')) {
             const safePath = item.path.split('/').map(encodeURIComponent).join('/');
             const rawLinkRes = await fetch(`https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${safePath}`);
             if (rawLinkRes.ok) {
                projects[folderName].printablesUrl = (await rawLinkRes.text()).trim();
             }
          }

          if (fileName.toLowerCase().startsWith('description')) {
             const safePath = item.path.split('/').map(encodeURIComponent).join('/');
             const rawDescRes = await fetch(`https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${safePath}`);
             if (rawDescRes.ok) {
                 projects[folderName].description = (await rawDescRes.text()).trim();
             }
          }
        }
      }
    }

    // 2. Finalize Descriptions
    await Promise.all(
      Object.values(projects).map(async (project) => {
        if (project.description === "Loading...") {
            if (project.printablesUrl) {
                project.description = await getPrintablesDescription(project.printablesUrl);
            } else {
                project.description = "No description available.";
            }
        }
        project.files.sort((a, b) => a.name.localeCompare(b.name));
      })
    );
    
    projectList = Object.values(projects).filter(p => p.files.length > 0);

  } else {
      errorMessage = "Received empty data from GitHub.";
  }
} catch (error: any) {
  errorMessage = error.message;
}
