// src/pages/files.astro
export const prerender = false; // Enables Server Side Rendering

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-3D-Files';
const BRANCH = 'main';

// --- Caching Strategy ---
Astro.response.headers.set('Cache-Control', 'public, max-age=1000, s-maxage=1000');

// --- Types ---
type FileItem = {
  name: string;
  path: string;
  url: string;
};

type ProjectItem = {
  title: string;
  description: string;
  printablesUrl: string | null;
  files: FileItem[];
};

// --- Variables ---
let errorMessage = "";
let projects: Record<string, ProjectItem> = {};
let projectList: ProjectItem[] = [];

// --- Helper Functions ---

async function getRepoFiles() {
  const apiUrl = `https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`;
  console.log(`Fetching: ${apiUrl}`); // Debug log

  try {
    const response = await fetch(apiUrl, {
      headers: {
        'User-Agent': 'PNGU-Website', // GitHub requires a User-Agent
        'Accept': 'application/vnd.github.v3+json'
      }
    });

    if (!response.ok) {
      if (response.status === 403) throw new Error("GitHub Rate Limit Exceeded. Try again in an hour.");
      if (response.status === 404) throw new Error("Repository not found. Check repo name/visibility.");
      throw new Error(`GitHub API Error: ${response.status} ${response.statusText}`);
    }

    return await response.json();
  } catch (e: any) {
    console.error("Fetch Error:", e.message);
    throw e;
  }
}

async function getPrintablesDescription(url: string) {
  if (!url) return "No description available.";
  try {
    const res = await fetch(url, {
        headers: { 'User-Agent': 'PNGU-Website' }
    });
    if (!res.ok) return "Could not fetch description from Printables.";
    
    const html = await res.text();
    const match = html.match(/<meta\s+name="description"\s+content="([^"]*)"/i) || 
                  html.match(/<meta\s+property="og:description"\s+content="([^"]*)"/i);
    
    if (match && match[1]) {
        return match[1].replace(/&quot;/g, '"').replace(/&#39;/g, "'");
    }
    return "Could not load description. Click the link to view on Printables.";
  } catch (e) {
    return "Error loading description.";
  }
}

// --- Main Logic ---

try {
  const data = await getRepoFiles();

  if (data && data.tree) {
    // 1. Group files by Folder
    for (const item of data.tree) {
      if (item.type === 'blob') { 
        const pathParts = item.path.split('/');
        
        // Only process if it is inside a subfolder (Folder/File)
        if (pathParts.length > 1) {
          const folderName = pathParts[0];
          const fileName = pathParts[pathParts.length - 1];

          // Initialize Project Object
          if (!projects[folderName]) {
            projects[folderName] = {
              title: folderName,
              description: "Loading...",
              printablesUrl: null,
              files: []
            };
          }

          // Handle ".stl" files
          if (fileName.toLowerCase().endsWith('.stl')) {
            projects[folderName].files.push({
              name: fileName,
              path: item.path,
              url: `https://github.com/${GITHUB_USER}/${GITHUB_REPO}/raw/${BRANCH}/${encodeURIComponent(item.path)}` 
            });
          }
          
          // Handle "link" file
          if (fileName.toLowerCase().includes('link')) {
             const rawLinkRes = await fetch(`https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${encodeURIComponent(item.path)}`);
             if (rawLinkRes.ok) {
                const rawUrl = await rawLinkRes.text();
                projects[folderName].printablesUrl = rawUrl.trim();
             }
          }
        }
      }
    }

    // 2. Fetch Descriptions (Parallel)
    await Promise.all(
      Object.values(projects).map(async (project) => {
        if (project.printablesUrl) {
          project.description = await getPrintablesDescription(project.printablesUrl);
        } else {
          project.description = "No Printables link found in folder.";
        }
        project.files.sort((a, b) => a.name.localeCompare(b.name));
      })
    );
    
    // Filter out folders that have no STL files
    projectList = Object.values(projects).filter(p => p.files.length > 0);

  } else {
      errorMessage = "Received empty data from GitHub.";
  }
} catch (error: any) {
  errorMessage = error.message;
}
