// src/pages/files.astro
export const prerender = false; // Enables Server Side Rendering for auto-sync

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-3D-Files';
const BRANCH = 'main';

// --- Caching Strategy ---
// Tells the browser/CDN to cache this page for 10 minutes (600 seconds)
// This prevents hitting GitHub rate limits while keeping the site relatively fresh.
Astro.response.headers.set('Cache-Control', 'public, max-age=600, s-maxage=600, stale-while-revalidate=60');

// --- Types ---
type FileItem = {
  name: string;
  path: string;
  url: string;
};

type ProjectItem = {
  title: string;
  description: string;
  printablesUrl: string | null;
  files: FileItem[];
};

// --- Helper Functions ---

// 1. Fetch the Repo Tree
async function getRepoFiles() {
  try {
    const response = await fetch(`https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`);
    if (!response.ok) return null;
    return await response.json();
  } catch (e) {
    console.error("GitHub API Error:", e);
    return null;
  }
}

// 2. Scrape Description from Printables
async function getPrintablesDescription(url) {
  if (!url) return "No description available.";
  try {
    const res = await fetch(url);
    const html = await res.text();
    // Simple Regex to find the meta description to avoid installing heavy parsing libraries
    const match = html.match(/<meta\s+name="description"\s+content="([^"]*)"/i) || 
                  html.match(/<meta\s+property="og:description"\s+content="([^"]*)"/i);
    
    if (match && match[1]) {
        // Decode HTML entities usually found in meta tags
        return match[1].replace(/&quot;/g, '"').replace(/&#39;/g, "'");
    }
    return "Could not load description. Click the link file to view on Printables.";
  } catch (e) {
    return "Error loading description from Printables.";
  }
}

// --- Main Logic ---

const data = await getRepoFiles();
const projects: Record<string, ProjectItem> = {};

if (data && data.tree) {
  // 1. Group files by Folder
  for (const item of data.tree) {
    if (item.type === 'blob') { // It's a file
      const pathParts = item.path.split('/');
      
      // We only care if it's inside a subfolder (Folder/File)
      if (pathParts.length > 1) {
        const folderName = pathParts[0];
        const fileName = pathParts[pathParts.length - 1];

        // Initialize Project Object if strictly new
        if (!projects[folderName]) {
          projects[folderName] = {
            title: folderName,
            description: "Loading description...",
            printablesUrl: null,
            files: []
          };
        }

        // Handle ".stl" files
        if (fileName.toLowerCase().endsWith('.stl')) {
          projects[folderName].files.push({
            name: fileName,
            path: item.path,
            // Create raw download link
            url: `https://github.com/${GITHUB_USER}/${GITHUB_REPO}/raw/${BRANCH}/${encodeURIComponent(item.path)}` 
          });
        }
        
        // Handle "link" file
        if (fileName.toLowerCase().includes('link')) {
             // Fetch the content of the link file from GitHub
             const rawLinkRes = await fetch(`https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${encodeURIComponent(item.path)}`);
             const rawUrl = await rawLinkRes.text();
             projects[folderName].printablesUrl = rawUrl.trim();
        }
      }
    }
  }

  // 2. Fetch Descriptions (in parallel to be faster)
  await Promise.all(
    Object.values(projects).map(async (project) => {
      if (project.printablesUrl) {
        project.description = await getPrintablesDescription(project.printablesUrl);
      } else {
        project.description = "No Printables link found in folder.";
      }
      // Sort files alphabetically
      project.files.sort((a, b) => a.name.localeCompare(b.name));
    })
  );
}

// Convert object to array for rendering
const projectList = Object.values(projects);
