import BackgroundEffects from '../components/BackgroundEffects.astro';

// --- Configuration ---
const GITHUB_USER = 'pngu-nerf';
const GITHUB_REPO = 'PNGU-3D-Files';
const BRANCH = 'main';
const currentYear = new Date().getFullYear();

// --- Types ---
type FileItem = {
  name: string;
  path: string;
  url: string;
};

type ProjectItem = {
  title: string;
  description: string;
  printablesUrl: string | null;
  files: FileItem[];
};

// --- Variables ---
let errorMessage = "";
let projects: Record<string, ProjectItem> = {};
let projectList: ProjectItem[] = [];

// --- Logic: Fetch from GitHub ---
try {
  const apiUrl = `https://api.github.com/repos/${GITHUB_USER}/${GITHUB_REPO}/git/trees/${BRANCH}?recursive=1`;
  const response = await fetch(apiUrl, {
    headers: { 'User-Agent': 'PNGU-Website', 'Accept': 'application/vnd.github.v3+json' }
  });

  if (!response.ok) throw new Error(`GitHub API Error: ${response.status}`);

  const data = await response.json();

  if (data && data.tree) {
    for (const item of data.tree) {
      if (item.type === 'blob') { 
        const pathParts = item.path.split('/');
        if (pathParts.length > 1) {
          const folderName = pathParts[0];
          const fileName = pathParts[pathParts.length - 1];

          if (!projects[folderName]) {
            projects[folderName] = {
              title: folderName,
              description: "No description available.",
              printablesUrl: null,
              files: []
            };
          }

          if (fileName.toLowerCase().endsWith('.stl')) {
            const safePath = item.path.split('/').map(encodeURIComponent).join('/');
            projects[folderName].files.push({
              name: fileName,
              path: item.path,
              url: `https://raw.githubusercontent.com/${GITHUB_USER}/${GITHUB_REPO}/${BRANCH}/${safePath}` 
            });
          }
        }
      }
    }
    projectList = Object.values(projects).filter(p => p.files.length > 0);
  }
} catch (error: any) {
  errorMessage = error.message;
}
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>3D Files | PNGU</title>

		<style>
            * { box-sizing: border-box; }

			body {
				font-family: sans-serif;
				padding: 2rem;
				text-align: center;
				max-width: 900px;
				margin: 0 auto;
				color: #ffffff;
                background-color: #0f0f0f;
			}
            
            #bg-layer {
                position: fixed;
                top: 0; left: 0;
                width: 100%; height: 100%;
                background-color: #0f0f0f;
                z-index: -2;
            }
			
			.header-box { text-align: center; margin-bottom: 3rem; }
			h1 { color: #ffffff; font-size: 2.5rem; margin: 0 0 0.5rem 0; }
			.subtitle { color: #a0a0a0; font-size: 1.1rem; }

            /* Navigation Buttons - Stacked Pills */
			.nav-links {
				margin-top: 2rem;
                display: flex;
                flex-direction: column;
                align-items: center;
                gap: 1rem;
			}

			.nav-links a {
				text-decoration: none;
                display: inline-block;
				font-size: 0.75rem;
				font-weight: 600;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				color: rgba(255, 255, 255, 0.4);
				padding: 10px 24px;
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 20px;
				background: rgba(255, 255, 255, 0.03);
				backdrop-filter: blur(4px);
				transition: all 0.3s ease;
                width: 220px;
			}

            .nav-links a:hover {
                color: rgba(255, 255, 255, 1);
				background: rgba(255, 255, 255, 0.1);
				border-color: rgba(255, 255, 255, 0.3);
				transform: translateY(-1px);
            }

            /* Content Containers */
			.content-box {
				background-color: rgba(40, 40, 40, 0.4); 
                backdrop-filter: blur(20px) saturate(120%);
                -webkit-backdrop-filter: blur(20px) saturate(120%);
                border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 16px;
				padding: 2rem;
				width: 100%;
				margin: 2rem auto; 
				text-align: left;
			}
            
            h2 { 
                margin-top: 0;
                font-size: 1.5rem;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
                padding-bottom: 10px;
                margin-bottom: 20px;
            }

            /* File Row Structure: [Name + DL] | [PREVIEW Dropdown] */
            .file-list { display: flex; flex-direction: column; gap: 12px; }

            .file-row {
                background-color: rgba(26, 26, 26, 0.6);
                border: 1px solid rgba(255,255,255,0.05);
                border-radius: 12px;
                overflow: hidden;
            }

            .row-main {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 12px 16px;
            }

            .file-info {
                display: flex;
                align-items: center;
                gap: 12px;
                flex: 1;
            }

            .file-name { font-weight: 500; font-size: 0.95rem; }

            .direct-dl {
                color: rgba(255,255,255,0.4);
                text-decoration: none;
                font-size: 0.7rem;
                padding: 4px 10px;
                border: 1px solid rgba(255,255,255,0.1);
                border-radius: 6px;
                transition: all 0.2s;
            }
            .direct-dl:hover {
                color: #fff;
                background: rgba(255,255,255,0.1);
                border-color: rgba(255,255,255,0.3);
            }

            /* Dropdown Preview Trigger */
            summary {
                cursor: pointer;
                list-style: none;
                padding: 12px;
                border-left: 1px solid rgba(255,255,255,0.1);
                color: #666;
                transition: all 0.2s;
                user-select: none;
            }
            summary:hover { color: #fff; background: rgba(255,255,255,0.02); }
            summary::-webkit-details-marker { display: none; }

            summary::after {
                content: 'PREVIEW ▼';
                font-size: 0.65rem;
                font-weight: 800;
                letter-spacing: 0.05em;
            }

            details[open] summary { color: #fff; background: rgba(255,255,255,0.05); }

            /* 3D Viewer Container */
            .preview-wrap {
                padding: 0;
                background: #111;
                animation: slideIn 0.3s ease-out;
            }

            .viewer-container {
                height: 400px;
                width: 100%;
                position: relative;
                display: flex;
                justify-content: center;
                align-items: center;
                overflow: hidden;
            }

            .loading-text {
                position: absolute;
                color: #666;
                font-size: 0.8rem;
                z-index: 10;
            }

            .footer-meta {
                margin-top: 4rem;
                opacity: 0.3;
                font-size: 0.7rem;
                letter-spacing: 0.1em;
                padding-bottom: 3rem;
                text-transform: uppercase;
            }

            @keyframes slideIn {
                from { opacity: 0; transform: translateY(-5px); }
                to { opacity: 1; transform: translateY(0); }
            }

			@media (max-width: 600px) {
				body { padding: 1rem; }
				h1 { font-size: 1.8rem; }
                .nav-links a { width: 90%; }
                .row-main { flex-direction: column; align-items: flex-start; gap: 10px; }
                summary { border-left: none; border-top: 1px solid rgba(255,255,255,0.1); width: 100%; text-align: center; }
			}
		</style>
	</head>
	<body>
        <div id="bg-layer"></div>
        <BackgroundEffects />

        <div class="header-box">
			<h1>3D Files</h1>
			<p class="subtitle">Component & Blaster Models</p>
			<div class="nav-links">
                <a href="/">← Back</a>
                <a href="https://lite.pngu.info/files">Lite Version</a>
            </div>
		</div>

        {errorMessage && <div class="content-box" style="color: #ff4444;"><strong>Error:</strong> {errorMessage}</div>}

        {projectList.length === 0 && !errorMessage ? (
            <div class="content-box" style="text-align: center;">
                <p style="color: #666; font-size: 0.8rem; letter-spacing: 0.1em;">CONNECTING TO REPO...</p>
            </div>
        ) : (
            projectList.map((project) => (
                <div class="content-box">
                    <h2>{project.title}</h2>
                    <div class="file-list">
                        {project.files.map((file) => (
                            <div class="file-row">
                                <div class="row-main">
                                    <div class="file-info">
                                        <span class="file-name">{file.name}</span>
                                        <a href={file.url} class="direct-dl" download>DL</a>
                                    </div>
                                    <details class="file-dropdown">
                                        <summary></summary>
                                        <div class="preview-wrap">
                                            <div class="viewer-container" data-stl-url={file.url}>
                                                <span class="loading-text">Initializing 3D Environment...</span>
                                            </div>
                                        </div>
                                    </details>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            ))
        )}

        <footer class="footer-meta">
            © {currentYear} pngu
        </footer>

        <script type="importmap">
            {
                "imports": {
                    "three": "https://unpkg.com/three@0.160.0/build/three.module.js",
                    "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/"
                }
            }
        </script>

        <script type="module">
            import * as THREE from 'three';
            import { STLLoader } from 'three/addons/loaders/STLLoader.js';
            import { OrbitControls } from 'three/addons/controls/OrbitControls.js';

            const activeViewers = new WeakSet();

            function initViewer(container, url) {
                if (activeViewers.has(container)) return;
                activeViewers.add(container);

                const loadingText = container.querySelector('.loading-text');
                if (loadingText) loadingText.textContent = "Fetching Geometry...";

                const scene = new THREE.Scene();
                scene.background = new THREE.Color(0x111111);
                
                const camera = new THREE.PerspectiveCamera(45, container.clientWidth / container.clientHeight, 0.1, 1000);
                const renderer = new THREE.WebGLRenderer({ antialias: true });
                renderer.setSize(container.clientWidth, container.clientHeight);
                container.appendChild(renderer.domElement);

                const controls = new OrbitControls(camera, renderer.domElement);
                controls.enableDamping = true;

                scene.add(new THREE.AmbientLight(0x404040, 2));
                const dirLight = new THREE.DirectionalLight(0xffffff, 2.5);
                dirLight.position.set(1, 1, 1);
                scene.add(dirLight);

                const loader = new STLLoader();
                loader.load(url, (geometry) => {
                    if (loadingText) loadingText.style.display = 'none';
                    geometry.center();

                    const material = new THREE.MeshPhongMaterial({ color: 0xffffff, specular: 0x444444, shininess: 100 });
                    const mesh = new THREE.Mesh(geometry, material);
                    mesh.rotation.x = -Math.PI / 2;
                    scene.add(mesh);

                    geometry.computeBoundingBox();
                    const maxSize = Math.max(geometry.boundingBox.max.x - geometry.boundingBox.min.x, geometry.boundingBox.max.y - geometry.boundingBox.min.y);
                    camera.position.z = maxSize * 2.5;
                    controls.update();

                    function animate() {
                        requestAnimationFrame(animate);
                        controls.update();
                        renderer.render(scene, camera);
                    }
                    animate();
                });
            }

            document.addEventListener('toggle', (e) => {
                if (e.target.open && e.target.classList.contains('file-dropdown')) {
                    const container = e.target.querySelector('.viewer-container');
                    const url = container.dataset.stlUrl;
                    if (container && url) setTimeout(() => initViewer(container, url), 50);
                }
            }, true);
        </script>
	</body>
</html>
