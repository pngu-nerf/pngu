---
import { getR2Data } from '../../lib/r2';
import { R2_FILES_BASE } from '../../constants';

const raw = await getR2Data("PNGU-3D-Files-main/") || [];
// Pre-process: Sort, Group, and Filter in one pass to save execution time
const grouped = raw
  .sort((a:any, b:any) => (a.displayName || "").localeCompare(b.displayName || ""))
  .reduce((acc: any, p: any) => {
    const char = (p.displayName?.[0] || "#").toUpperCase();
    if (!acc[char]) acc[char] = [];
    // Only keep actual STL files
    p.cleanFiles = p.files.filter((f: string) => f.endsWith('.stl'));
    acc[char].push(p);
    return acc;
  }, {});
const letters = Object.keys(grouped).sort();
