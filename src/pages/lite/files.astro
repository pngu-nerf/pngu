---
import { getR2Data } from '../../lib/r2';
import { R2_FILES_BASE } from '../../constants';
const raw = await getR2Data("PNGU-3D-Files-main/");
const projects = raw.sort((a:any,b:any)=>(a.displayName||"").localeCompare(b.displayName||""));
const grouped = projects.reduce((acc:any,p:any)=>{
  const c = p.displayName[0].toUpperCase();
  if(!acc[c])acc[c]=[];
  acc[c].push(p);
  return acc;
},{});
const letters = Object.keys(grouped).sort();
---
<!doctype html><meta charset="utf-8"><meta name="viewport" content="width=device-width,initial-scale=1"><link rel="icon" href="data:;base64,iVBOR="><link rel="preconnect" href="https://assets.pngu.info"><title>Files | Lite</title><style>body{font:13px sans-serif;background:#333;color:#fff;text-align:center;padding:5vh 1rem}b{display:block;font-size:11px;color:#888;text-transform:uppercase}a{color:#fff;text-decoration:none;display:block;padding:12px 0;width:240px;margin:0 auto;border-bottom:1px solid #444}a:active{background:#444}.h{font:900 32px sans-serif;color:#222;margin:2rem 0 0}.reg{display:block;margin-top:4rem;color:#555;font-size:11px;text-decoration:underline}h2{font:700 10px sans-serif;color:#888;margin:1.5rem 0 0;text-transform:uppercase}</style><b>STL DIRECTORY</b>{letters.map(l=>(<><div class="h">{l}</div>{grouped[l].map((p:any)=>(<section><h2>{p.displayName}</h2>{p.files.filter((f:string)=>!['files','Description'].includes(f)).map((f:string)=>(<a href={`${R2_FILES_BASE}/${encodeURIComponent(p.folderName)}/${encodeURIComponent(f)}`} download={f}>{f.replace('.stl','')}</a>))}</section>))}</>))}<a href="/" class="reg">Back to home</a>
