---
/* lite/index.astro - The "Ghost" Build */
const currentYear = new Date().getFullYear();
---
<!doctype html>
<html lang="en" style="background:#333;color:#fff">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>pngu</title>
    <style>
        /* Minified, Zero-Logic CSS */
        body { font-family: system-ui, sans-serif; max-width: 500px; margin: 0 auto; padding: 1rem; line-height: 1.2; }
        a { color: #0df; text-decoration: none; }
        h2 { font-size: .8rem; opacity: .5; margin: 1.5rem 0 .5rem; text-transform: uppercase; }
        ul { list-style: none; }
        li { margin-bottom: .6rem; }
        .d { font-size: .8rem; opacity: .6; display: block; }
        footer { margin-top: 3rem; border-top: 1px solid #444; padding-top: 1rem; font-size: .8rem; }
    </style>
</head>
<body>
    <header><b>pngu</b></header>
    <main>
        <section>
            <h2>Directory</h2>
            <ul>
                <li><a href="/files">3D Files</a> <span class="d">STLs for printing</span></li>
                <li><a href="/data">Blaster Data</a> <span class="d">Performance docs</span></li>
                <li><a href="/brand">Brand Assets</a> <span class="d">Logos & fonts</span></li>
                <li><a href="/contact">Contact</a> <span class="d">Email & Discord</span></li>
            </ul>
        </section>
        <section>
            <h2>External</h2>
            <ul style="display:flex;gap:1rem">
                <li><a href="https://www.youtube.com/@PnguNerf">YouTube</a></li>
                <li><a href="https://github.com/pngu-nerf">GitHub</a></li>
                <li><a href="https://www.printables.com/@PnguNerf_3188348">Printables</a></li>
            </ul>
        </section>
    </main>
    <footer>
        <a href="https://pngu.info" style="opacity:.7;text-decoration:underline">Return to the normal site</a>
        <p style="margin-top:1rem;opacity:.3">&copy; {currentYear} pngu</p>
    </footer>
</body>
</html>
