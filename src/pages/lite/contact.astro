---
import ContactItem from '../../components/ContactItem.astro';
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Lite | Contact</title>
		<style>
			body { font-family: sans-serif; padding: 1.5rem; background: #000; color: #fff; max-width: 800px; margin: 0 auto; }
			.nav { margin-bottom: 2rem; text-align: left; }
			.nav a { color: #aaa; text-decoration: none; font-size: 0.8rem; border: 1px solid #333; padding: 8px 16px; border-radius: 20px; }
			.box { border: 1px solid #222; padding: 1.5rem; border-radius: 12px; margin-bottom: 1.5rem; text-align: left; }
			h2 { font-size: 1.1rem; margin-top: 0; color: #fff; }
			p { color: #888; font-size: 0.9rem; margin-bottom: 1.5rem; }
		</style>
	</head>
	<body>
		<div class="nav"><a href="/lite">← Back</a></div>
		<h1>Contact</h1>
		<div class="box">
			<h2>Email</h2>
			<p>For professional inquiries and partnerships.</p>
			<ContactItem buttonId="lite-email" value="contact@pngu.info" label="Copy Email" />
		</div>
		<div class="box">
			<h2>Discord</h2>
			<p>For casual chats and community contact.</p>
			<ContactItem buttonId="lite-discord" value="penguinnoly" label="Copy Handle" />
		</div>
		<footer style="margin-top: 5rem; opacity: 0.3; font-size: 0.7rem;">© {currentYear} PNGU</footer>
	</body>
</html>
