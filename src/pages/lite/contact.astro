---
const currentYear = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8"/><meta name="viewport" content="width=device-width,initial-scale=1"/>
<title>contact</title>
<style>
  body{font:14px/1.4 sans-serif;background:#000;color:#fff;max-width:400px;margin:0 auto;padding:1rem}
  header{margin-bottom:2rem}
  .b{color:#444;text-decoration:none;font-size:12px}
  h1{font-size:1.2rem;margin:1rem 0}
  .box{background:#111;border:1px solid #222;padding:1rem;border-radius:4px;margin-bottom:1rem}
  h2{font-size:14px;margin-bottom:4px}
  p{font-size:12px;color:#666;margin-bottom:1rem}
  button{
    width:100%;background:#0df;border:0;color:#000;padding:10px;
    font-weight:bold;border-radius:4px;cursor:pointer;font-size:12px
  }
  button:active{opacity:0.8}
  footer{margin-top:4rem;color:#222;font-size:10px}
</style>
</head>
<body>
<a href="/lite" class="b">← back</a>
<header><h1>Contact</h1></header>

<div class="box">
  <h2>Email</h2>
  <p>contact@pngu.info</p>
  <button onclick="copy('contact@pngu.info', this)">Copy Email</button>
</div>

<div class="box">
  <h2>Discord</h2>
  <p>penguinnoly</p>
  <button onclick="copy('penguinnoly', this)">Copy Handle</button>
</div>

<footer>© {currentYear} PNGU</footer>

<script is:inline>
  function copy(val, btn) {
    navigator.clipboard.writeText(val);
    const original = btn.innerText;
    btn.innerText = 'Copied!';
    btn.style.background = '#fff';
    setTimeout(() => {
      btn.innerText = original;
      btn.style.background = '#0df';
    }, 1000);
  }
</script>
</body></html>
