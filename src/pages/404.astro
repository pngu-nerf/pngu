---
import BackgroundEffects from '../components/BackgroundEffects.astro';
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>404 | PNGU</title>

		<style>
			* { box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
			body {
				font-family: sans-serif; padding: 2rem; text-align: center;
				display: flex; flex-direction: column; justify-content: center;
				align-items: center; min-height: 100vh;
				margin: 0 auto; color: #ffffff; background-color: #0f0f0f;
				overflow: hidden;
			}
			#bg-layer { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: #0f0f0f; z-index: -2; }
			
			.error-container {
				background-color: rgba(40, 40, 40, 0.4); 
				backdrop-filter: blur(20px) saturate(120%);
				border: 1px solid rgba(255, 255, 255, 0.1); 
				border-radius: 24px;
				padding: 3rem 2rem; 
				width: 100%; 
				max-width: 450px; 
				z-index: 1;
			}

			h1 { color: #ffffff; font-size: 4rem; margin: 0; font-weight: 800; letter-spacing: -2px; }
			.subtitle { color: #a0a0a0; font-size: 1.1rem; margin-bottom: 2.5rem; }

			.nav-links { display: flex; flex-direction: column; align-items: center; gap: 1rem; }
			.nav-links a {
				text-decoration: none; display: inline-block; font-size: 0.75rem; font-weight: 600;
				text-transform: uppercase; letter-spacing: 0.1em; color: #fff;
				padding: 14px 32px; border: 1px solid rgba(255, 255, 255, 0.2);
				border-radius: 30px; background: rgba(255, 255, 255, 0.05);
				transition: all 0.3s ease; width: 100%;
			}
			
			@media (hover: hover) {
				.nav-links a:hover { 
					background: #fff; 
					color: #000; 
					transform: translateY(-2px); 
					box-shadow: 0 10px 20px rgba(0,0,0,0.2);
				}
			}

			.footer-meta { 
				position: absolute; bottom: 2rem; opacity: 0.3; 
				font-size: 0.7rem; letter-spacing: 0.15em; text-transform: uppercase; 
			}

			@media (max-width: 600px) {
				.error-container { width: 90%; padding: 2.5rem 1.5rem; }
				h1 { font-size: 3rem; }
			}
		</style>
	</head>
	<body>
		<div id="bg-layer"></div>
		<BackgroundEffects />

		<div class="error-container">
			<h1>404</h1>
			<p class="subtitle">Sorry that doesn't exist</p>
			
			<div class="nav-links">
				<a href="/">← Back Home</a>
				<a href="https://lite.pngu.info">Try Lite Mode</a>
			</div>
		</div>

		<footer class="footer-meta">© {currentYear} pngu</footer>
	</body>
</html>
