---
// src/pages/index.astro
import BackgroundEffects from '../components/BackgroundEffects.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PNGU</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #ffffff;
				background-color: #0f0f0f;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
			}
			
			/* Main content wrapper */
			.main-content {
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			
			/* YouTube-style banner container - Shrunk to 90% */
			.banner-container {
				width: 100%;
				/* Transparent background so lines show through if needed, or keep dark */
				background-color: transparent; 
				display: flex;
				justify-content: center;
				align-items: center;
				padding: 20px 0;
				position: relative;
				overflow: hidden;
				border-radius: 12px 12px 0 0;
				margin-bottom: 2rem;
			}
			
			/* YouTube-style banner image - 90% size */
			.banner-image {
				width: 90%;
				max-width: 2304px;
				height: auto;
				display: block;
				object-fit: contain;
				border-radius: 8px;
                /* Ensure banner stays above background lines if they overlap */
                z-index: 1; 
			}
			
			/* Links container with content box styling */
			.links-container {
				max-width: 600px;
				margin: 0 auto;
				padding: 0 20px;
				flex: 1;
                z-index: 1; /* Ensure content is above background */
			}
			
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			
			/* Main links list - centered */
			.links-list {
				list-style: none;
				border-radius: 8px;
				overflow: hidden;
				margin-bottom: 2rem;
			}
			
			.link-item {
				border-bottom: 1px solid rgba(255, 255, 255, 0.1);
				transition: background-color 0.2s ease;
				text-align: center;
			}
			
			.link-item:last-child {
				border-bottom: none;
			}
			
			.link-item:hover {
				background-color: rgba(255, 255, 255, 0.05);
			}
			
			.link-item a {
				display: block;
				padding: 1.5rem 2rem;
				text-decoration: none;
				color: #ffffff;
				font-size: 1.1rem;
				font-weight: 500;
				transition: all 0.2s ease;
				text-align: center;
			}
			
			.link-item a:hover {
				color: #e0e0e0;
			}
			
			/* Link descriptions - centered */
			.link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.9rem;
				margin-top: 0.5rem;
				font-weight: normal;
				text-align: center;
				width: 100%;
				padding: 0 1rem;
			}
			
			/* Link title - centered */
			.link-title {
				display: block;
				text-align: center;
				font-size: 1.2rem;
				margin-bottom: 0.25rem;
			}
			
			/* Social links section */
			.social-section {
				padding-top: 1.5rem;
				position: relative;
			}
			
			.social-section::before {
				content: '';
				position: absolute;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 33.33%;
				height: 1px;
				background-color: rgba(255, 255, 255, 0.1);
			}
			
			.social-heading {
				text-align: center;
				color: #e0e0e0;
				font-size: 1rem;
				margin-top: 1.5rem;
				margin-bottom: 1rem;
				font-weight: normal;
				opacity: 0.8;
			}
			
			/* Social links list - back button style */
			.social-links {
				list-style-type: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
			}
			
			.social-link-item {
				margin: 0;
				padding: 0;
			}
			
			/* Style the social links to look like back buttons */
			.social-link-item a {
				display: block;
				padding: 0.75rem 1rem;
				background-color: rgba(255, 255, 255, 0.05);
				border-radius: 6px;
				text-decoration: none;
				color: #ffffff;
				font-weight: 500;
				text-align: center;
				transition: background-color 0.2s ease;
			}
			
			.social-link-item a:hover {
				background-color: rgba(255, 255, 255, 0.1);
			}
			
			/* Social link title */
			.social-link-title {
				display: block;
				text-align: center;
				font-size: 1.1rem;
				font-weight: 500;
			}
			
			/* Bottom blank space */
			.bottom-space {
				height: 40px;
				width: 100%;
				flex-shrink: 0;
			}
			
			/* Responsive adjustments */
			@media (max-width: 768px) {
				.banner-container {
					border-radius: 10px 10px 0 0;
					margin-bottom: 1.5rem;
					padding: 15px 0;
				}
				
				.banner-image {
					width: 92%;
				}
				
				.links-container {
					padding: 0 15px;
				}
				
				.content-box {
					padding: 1.5rem;
				}
				
				.link-item a {
					padding: 1.25rem 1.5rem;
					font-size: 1rem;
				}
				
				.bottom-space {
					height: 30px;
				}
			}
			
			@media (max-width: 480px) {
				.banner-container {
					border-radius: 8px 8px 0 0;
					margin-bottom: 1rem;
					padding: 10px 0;
				}
				
				.banner-image {
					width: 94%;
					border-radius: 6px;
				}
				
				.links-container {
					padding: 0 10px;
				}
				
				.content-box {
					padding: 1.25rem;
					border-radius: 10px;
				}
				
				.link-item a {
					padding: 1rem 1.25rem;
				}
				
				.bottom-space {
					height: 20px;
				}
			}
		</style>
	</head>
	<body>
        <BackgroundEffects />

		<div class="main-content">
			<div class="banner-container">
				<img 
					src="/site-assets/Site Banner.jpg" 
					alt="PNGU Banner"
					class="banner-image"
				/>
			</div>

			<div class="links-container">
				<div class="content-box">
					<ul class="links-list">
						<li class="link-item">
							<a href="/files">
								<span class="link-title">3D Files</span>
								<span class="link-description">All 3D files for printing</span>
							</a>
						</li>
						<li class="link-item">
							<a href="/data">
								<span class="link-title">Blaster Data</span>
								<span class="link-description">All spreadsheets about blaster performance</span>
							</a>
						</li>
						<li class="link-item">
							<a href="/brand">
								<span class="link-title">Brand Assets</span>
								<span class="link-description">Download logos, fonts, and branding materials</span>
							</a>
						</li>
						<li class="link-item">
							<a href="/contact">
								<span class="link-title">Contact</span>
								<span class="link-description">Email & Discord</span>
							</a>
						</li>
					</ul>
					
					<div class="social-section">
						<h2 class="social-heading">External Links</h2>
						<ul class="social-links">
							<li class="social-link-item">
								<a href="https://www.youtube.com/@PnguNerf" target="_blank" rel="noopener">
									<span class="social-link-title">YouTube</span>
								</a>
							</li>
							<li class="social-link-item">
								<a href="https://github.com/pngu-nerf" target="_blank" rel="noopener">
									<span class="social-link-title">GitHub</span>
								</a>
							</li>
							<li class="social-link-item">
								<a href="https://www.printables.com/@PnguNerf_3188348" target="_blank" rel="noopener">
									<span class="social-link-title">Printables</span>
								</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
			
			<div class="bottom-space"></div>
		</div>
	</body>
</html>
