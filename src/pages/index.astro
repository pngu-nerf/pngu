<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PNGU - Home</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #ffffff;
				background-color: #0f0f0f;
				/* Add min-height to ensure content fills screen */
				min-height: 100vh;
			}
			
			/* Banner - fixed at top, full width */
			.banner {
				width: 100%;
				height: 360px; /* Your corrected height */
				overflow: hidden;
				position: relative;
			}
			
			.banner-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center;
			}
			
			/* Main content wrapper */
			.main-wrapper {
				/* Remove margin from banner, content starts right after */
				margin-top: 0;
				/* Push content down only if needed */
				padding: 0;
			}
			
			/* Links container with content box styling */
			.links-container {
				max-width: 600px;
				margin: 0 auto; /* No top margin */
				padding: 0 20px;
				/* Negative margin to pull content up if needed */
				margin-top: -40px; /* Optional: slight overlap */
			}
			
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
				/* Remove top margin since banner is at top */
				margin-top: 0;
			}
			
			/* Site title/header - optional if you want to keep it */
			.site-header {
				text-align: center;
				margin-bottom: 2rem;
			}
			
			.site-title {
				color: #ffffff;
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
			}
			
			.site-subtitle {
				color: #e0e0e0;
				font-size: 1.1rem;
				opacity: 0.8;
			}
			
			/* Main links list - centered */
			.links-list {
				list-style: none;
				border-radius: 8px;
				overflow: hidden;
				margin-bottom: 2rem;
			}
			
			.link-item {
				border-bottom: 1px solid rgba(255, 255, 255, 0.1);
				transition: background-color 0.2s ease;
				text-align: center;
			}
			
			.link-item:last-child {
				border-bottom: none;
			}
			
			.link-item:hover {
				background-color: rgba(255, 255, 255, 0.05);
			}
			
			.link-item a {
				display: block;
				padding: 1.5rem 2rem;
				text-decoration: none;
				color: #ffffff;
				font-size: 1.1rem;
				font-weight: 500;
				transition: all 0.2s ease;
				text-align: center;
			}
			
			.link-item a:hover {
				color: #e0e0e0;
				background-color: transparent;
			}
			
			/* Link descriptions - centered */
			.link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.9rem;
				margin-top: 0.5rem;
				font-weight: normal;
				text-align: center;
				width: 100%;
				padding: 0 1rem;
			}
			
			/* Link title - centered */
			.link-title {
				display: block;
				text-align: center;
				font-size: 1.2rem;
				margin-bottom: 0.25rem;
			}
			
			/* Social links section - download button style */
			.social-section {
				margin-top: 2.5rem;
				padding-top: 1.5rem;
				border-top: 1px solid rgba(255, 255, 255, 0.1);
			}
			
			.social-heading {
				text-align: center;
				color: #e0e0e0;
				font-size: 1rem;
				margin-bottom: 1rem;
				font-weight: normal;
				opacity: 0.8;
			}
			
			/* Social links list - download button style */
			.social-links {
				list-style-type: none;
				padding: 0;
				margin: 1.5rem 0;
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
			}
			
			.social-link-item {
				margin: 0;
				padding: 0;
			}
			
			.social-link-item a {
				display: block;
				padding: 1rem;
				background-color: rgba(255, 255, 255, 0.05);
				border-radius: 6px;
				transition: background-color 0.2s ease;
				text-decoration: none;
				color: #ffffff;
				font-weight: 500;
				text-align: center;
			}
			
			.social-link-item a:hover {
				background-color: rgba(255, 255, 255, 0.1);
				text-decoration: none;
				color: #ffffff;
			}
			
			/* Social link descriptions */
			.social-link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.85rem;
				margin-top: 0.25rem;
				font-weight: normal;
				text-align: center;
				width: 100%;
			}
			
			/* Social link title */
			.social-link-title {
				display: block;
				text-align: center;
				font-size: 1.1rem;
				font-weight: 500;
			}
			
			/* Highlight color for accents */
			.highlight {
				color: #646cff;
			}
		</style>
	</head>
	<body>
		<!-- 1. Banner Image Only - Now sits at very top -->
		<div class="banner">
			<img 
				src="/site-assets/Site Banner.jpg" 
				alt="PNGU Banner"
				class="banner-image"
			/>
		</div>

		<!-- 2. Content Area starts right after banner -->
		<main class="links-container">
			<div class="content-box">
				<!-- Removed site header since banner shows title -->
				
				<ul class="links-list">
					<li class="link-item">
						<a href="/files">
							<span class="link-title">3D Files</span>
							<span class="link-description">All 3D files for printing</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/data">
							<span class="link-title">Blaster Data</span>
							<span class="link-description">All spreadsheets about blaster performance</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/brand">
							<span class="link-title">Brand Assets</span>
							<span class="link-description">Download logos, fonts, and branding materials</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/contact">
							<span class="link-title">Contact</span>
							<span class="link-description">Email & Discord</span>
						</a>
					</li>
				</ul>
				
				<!-- Social Links Section - Download Button Style -->
				<div class="social-section">
					<h2 class="social-heading">External Links</h2>
					<ul class="social-links">
						<li class="social-link-item">
							<a href="https://www.youtube.com/@PnguNerf" target="_blank" rel="noopener">
								<span class="social-link-title">YouTube</span>
							</a>
						</li>
						<li class="social-link-item">
							<a href="https://github.com/pngu-nerf" target="_blank" rel="noopener">
								<span class="social-link-title">GitHub</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</main>
	</body>
</html>
