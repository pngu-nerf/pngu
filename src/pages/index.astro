<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PNGU - Home</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #ffffff;
				background-color: #0f0f0f;
			}
			
			/* Banner - takes full width, no extra spacing */
			.banner {
				width: 100%;
				height: 300px;
				overflow: hidden;
				position: relative;
			}
			
			.banner-image {
				width: 100%;
				height: 100%;
				object-fit: cover;
				object-position: center 33.33%;
			}
			
			/* Links container with content box styling */
			.links-container {
				max-width: 600px;
				margin: 2rem auto;
				padding: 0 20px;
			}
			
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			
			/* Site title/header */
			.site-header {
				text-align: center;
				margin-bottom: 2rem;
			}
			
			.site-title {
				color: #ffffff;
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
			}
			
			.site-subtitle {
				color: #e0e0e0;
				font-size: 1.1rem;
				opacity: 0.8;
			}
			
			/* Links list */
			.links-list {
				list-style: none;
				border-radius: 8px;
				overflow: hidden;
			}
			
			.link-item {
				border-bottom: 1px solid rgba(255, 255, 255, 0.1);
				transition: background-color 0.2s ease;
			}
			
			.link-item:last-child {
				border-bottom: none;
			}
			
			.link-item:hover {
				background-color: rgba(255, 255, 255, 0.05);
			}
			
			.link-item a {
				display: block;
				padding: 1.5rem 2rem;
				text-decoration: none;
				color: #ffffff;
				font-size: 1.1rem;
				font-weight: 500;
				transition: all 0.2s ease;
			}
			
			.link-item a:hover {
				color: #e0e0e0;
				background-color: transparent;
				padding-left: 2.25rem;
			}
			
			/* Link descriptions */
			.link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.9rem;
				margin-top: 0.25rem;
				font-weight: normal;
			}
			
			/* Footer */
			.site-footer {
				text-align: center;
				margin-top: 2rem;
				padding-top: 1.5rem;
				border-top: 1px solid rgba(255, 255, 255, 0.1);
				color: #a0a0a0;
				font-size: 0.9rem;
			}
			
			/* Highlight color for accents */
			.highlight {
				color: #646cff;
			}
		</style>
	</head>
	<body>
		<!-- 1. Banner Image Only -->
		<div class="banner">
			<img 
				src="/brand-assets/Youtube Banner.jpg" 
				alt="PNGU Banner"
				class="banner-image"
			/>
		</div>

		<!-- 2. Content Area -->
		<main class="links-container">
			<div class="content-box">
				<header class="site-header">
					<h1 class="site-title">PNGU</h1>
					<p class="site-subtitle">Your Nerf Repository</p>
				</header>
				
				<ul class="links-list">
					<li class="link-item">
						<a href="/blaster-data">
							Blaster Data
							<span class="link-description">All my spreadsheets</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/brand-assets">
							Brand Assets
							<span class="link-description">Download logos, fonts, and branding materials</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/about">
							About
							<span class="link-description">Learn more about PNGU</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/contact">
							Contact
							<span class="link-description">Get in touch</span>
						</a>
					</li>
				</ul>
				
				<footer class="site-footer">
					<p>© <span class="highlight">PNGU</span> • Sabre t-daaart</p>
				</footer>
			</div>
		</main>
	</body>
</html>
