<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>PNGU - Home</title>
		<style>
			* {
				margin: 0;
				padding: 0;
				box-sizing: border-box;
			}
			
			body {
				font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
				line-height: 1.6;
				color: #ffffff;
				background-color: #0f0f0f;
				min-height: 100vh;
			}
			
			/* YouTube-style banner container */
			.banner-container {
				width: 100%;
				background-color: #000000; /* Black border */
				display: flex;
				justify-content: center;
				align-items: center;
				padding: 0; /* No padding, black border comes from background */
				position: relative;
				overflow: hidden;
				border-radius: 12px 12px 0 0; /* Rounded top corners */
				margin-bottom: 2rem; /* Space between banner and content */
			}
			
			/* YouTube-style banner image */
			.banner-image {
				width: 100%;
				max-width: 2560px; /* YouTube banner max width */
				height: auto;
				display: block;
				object-fit: contain; /* Show full image without cropping */
				border-radius: 8px; /* Slight rounding on image itself */
			}
			
			/* Links container with content box styling */
			.links-container {
				max-width: 600px;
				margin: 0 auto;
				padding: 0 20px;
			}
			
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			
			/* Main links list - centered */
			.links-list {
				list-style: none;
				border-radius: 8px;
				overflow: hidden;
				margin-bottom: 2rem;
			}
			
			.link-item {
				border-bottom: 1px solid rgba(255, 255, 255, 0.1);
				transition: background-color 0.2s ease;
				text-align: center;
			}
			
			.link-item:last-child {
				border-bottom: none;
			}
			
			.link-item:hover {
				background-color: rgba(255, 255, 255, 0.05);
			}
			
			.link-item a {
				display: block;
				padding: 1.5rem 2rem;
				text-decoration: none;
				color: #ffffff;
				font-size: 1.1rem;
				font-weight: 500;
				transition: all 0.2s ease;
				text-align: center;
			}
			
			.link-item a:hover {
				color: #e0e0e0;
				background-color: transparent;
			}
			
			/* Link descriptions - centered */
			.link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.9rem;
				margin-top: 0.5rem;
				font-weight: normal;
				text-align: center;
				width: 100%;
				padding: 0 1rem;
			}
			
			/* Link title - centered */
			.link-title {
				display: block;
				text-align: center;
				font-size: 1.2rem;
				margin-bottom: 0.25rem;
			}
			
			/* Social links section - download button style */
			.social-section {
				margin-top: 2.5rem;
				padding-top: 1.5rem;
				border-top: 1px solid rgba(255, 255, 255, 0.1);
			}
			
			.social-heading {
				text-align: center;
				color: #e0e0e0;
				font-size: 1rem;
				margin-bottom: 1rem;
				font-weight: normal;
				opacity: 0.8;
			}
			
			/* Social links list - download button style */
			.social-links {
				list-style-type: none;
				padding: 0;
				margin: 1.5rem 0;
				display: flex;
				flex-direction: column;
				gap: 0.75rem;
			}
			
			.social-link-item {
				margin: 0;
				padding: 0;
			}
			
			.social-link-item a {
				display: block;
				padding: 1rem;
				background-color: rgba(255, 255, 255, 0.05);
				border-radius: 6px;
				transition: background-color 0.2s ease;
				text-decoration: none;
				color: #ffffff;
				font-weight: 500;
				text-align: center;
			}
			
			.social-link-item a:hover {
				background-color: rgba(255, 255, 255, 0.1);
				text-decoration: none;
				color: #ffffff;
			}
			
			/* Social link descriptions */
			.social-link-description {
				display: block;
				color: #a0a0a0;
				font-size: 0.85rem;
				margin-top: 0.25rem;
				font-weight: normal;
				text-align: center;
				width: 100%;
			}
			
			/* Social link title */
			.social-link-title {
				display: block;
				text-align: center;
				font-size: 1.1rem;
				font-weight: 500;
			}
			
			/* Responsive adjustments */
			@media (max-width: 2560px) {
				.banner-container {
					border-radius: 12px 12px 0 0;
				}
				
				.banner-image {
					max-width: 100%; /* Full width on smaller screens */
				}
			}
			
			@media (max-width: 768px) {
				.banner-container {
					border-radius: 10px 10px 0 0;
					margin-bottom: 1.5rem;
				}
				
				.links-container {
					padding: 0 15px;
				}
				
				.content-box {
					padding: 1.5rem;
				}
				
				.link-item a {
					padding: 1.25rem 1.5rem;
					font-size: 1rem;
				}
			}
			
			@media (max-width: 480px) {
				.banner-container {
					border-radius: 8px 8px 0 0;
					margin-bottom: 1rem;
				}
				
				.banner-image {
					border-radius: 6px;
				}
				
				.links-container {
					padding: 0 10px;
				}
				
				.content-box {
					padding: 1.25rem;
					border-radius: 10px;
				}
				
				.link-item a {
					padding: 1rem 1.25rem;
				}
			}
		</style>
	</head>
	<body>
		<!-- 1. YouTube-style Banner -->
		<div class="banner-container">
			<img 
				src="/site-assets/Site Banner.jpg" 
				alt="PNGU Banner"
				class="banner-image"
			/>
		</div>

		<!-- 2. Content Area -->
		<div class="links-container">
			<div class="content-box">
				<ul class="links-list">
					<li class="link-item">
						<a href="/files">
							<span class="link-title">3D Files</span>
							<span class="link-description">All 3D files for printing</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/data">
							<span class="link-title">Blaster Data</span>
							<span class="link-description">All spreadsheets about blaster performance</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/brand">
							<span class="link-title">Brand Assets</span>
							<span class="link-description">Download logos, fonts, and branding materials</span>
						</a>
					</li>
					<li class="link-item">
						<a href="/contact">
							<span class="link-title">Contact</span>
							<span class="link-description">Email & Discord</span>
						</a>
					</li>
				</ul>
				
				<!-- Social Links Section - Download Button Style -->
				<div class="social-section">
					<h2 class="social-heading">External Links</h2>
					<ul class="social-links">
						<li class="social-link-item">
							<a href="https://www.youtube.com/@PnguNerf" target="_blank" rel="noopener">
								<span class="social-link-title">YouTube</span>
							</a>
						</li>
						<li class="social-link-item">
							<a href="https://github.com/pngu-nerf" target="_blank" rel="noopener">
								<span class="social-link-title">GitHub</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</body>
</html>
