---
import MainLayout from '../layouts/MainLayout.astro';
import NavLink from '../components/NavLink.astro';
import IndexIntro from '../components/IndexIntro.astro';
---

<MainLayout title="Home">
  <IndexIntro />

  <header class="index-header">
    <div class="banner-wrapper">
      <img 
        src="/site-assets/banner.png" 
        alt="PNGU Banner"
        class="banner-image"
        loading="eager"
        decoding="sync"
      />
    </div>
    <a href="https://lite.pngu.info" class="separator" title="Switch to Lite Mode">~</a>
  </header>

  <section class="content-box">
    <ul class="nav-list">
      <NavLink href="/files" title="3D Files" description="STL files for 3D printing" />
      <NavLink href="/data" title="Blaster Data" description="Performance spreadsheets & docs" />
      <NavLink href="/brand" title="Brand Assets" description="Logos, fonts, and branding" />
      <NavLink href="/contact" title="Contact" description="Email & Discord info" />
    </ul>
  </section>

  <div class="separator-small"></div>

  <section class="content-box">
    <h2>External Links</h2>
    <ul class="nav-list">
      <NavLink href="https://www.youtube.com/@PnguNerf" title="YouTube" external />
      <NavLink href="https://github.com/pngu-nerf" title="GitHub" external />
      <NavLink href="https://www.printables.com/@PnguNerf_3188348" title="Printables" external />
    </ul>
  </section>

  <div class="spacer-bottom"></div>
</MainLayout>

<style>
  /* Base state for intro: hidden until the wipe reveals them */
  .index-header, .content-box, .separator, .separator-small {
    opacity: 1; 
    transition: opacity 0.5s ease;
  }

  .index-header { 
    width: 100%; 
    margin-bottom: 1rem; 
    position: relative;
    z-index: 10;
  }

  .banner-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 30px 10px;
  }
  
  .banner-image {
    width: 100%;
    max-width: 1200px; 
    height: auto;
    display: block;
    filter: drop-shadow(0 10px 15px rgba(0, 0, 0, 0.6));
    pointer-events: none;
    border: none;
    box-shadow: none;
    border-radius: 0;
  }

  /* Modified separator to handle link states */
  .separator { 
    display: block; /* Required for text-align to work on an <a> tag */
    text-decoration: none;
    text-align: center; 
    font-size: 2rem; 
    color: rgba(255, 255, 255, 0.2); 
    margin: 1.5rem 0; 
    font-weight: 300; 
    user-select: none;
    cursor: pointer;
    transition: color 0.3s ease, opacity 0.5s ease;
  }

  .separator:hover {
    color: rgba(255, 255, 255, 0.6);
  }

  .separator-small { margin: 2rem 0; height: 1px; }
  .nav-list { list-style: none; padding: 0; margin: 0; }
  .spacer-bottom { height: 80px; }

  @media (max-width: 600px) {
    .banner-wrapper { padding: 20px 0; }
    .banner-image { width: 90%; }
    .separator { margin: 1rem 0; font-size: 1.5rem; }
  }
</style>
