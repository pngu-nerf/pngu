---
import MainLayout from '../layouts/MainLayout.astro';
import NavLink from '../components/NavLink.astro';
---

<MainLayout title="Home">
  <header class="index-header">
    <div class="banner-wrapper">
      <img 
        src="/site-assets/Site-Banner.png" 
        alt="PNGU Banner"
        class="banner-image"
        loading="eager" 
      />
    </div>
    <div class="separator">~</div>
  </header>

  <section class="content-box">
    <ul class="nav-list">
      <NavLink href="/files" title="3D Files" description="STL files for 3D printing" />
      <NavLink href="/data" title="Blaster Data" description="Performance spreadsheets & docs" />
      <NavLink href="/brand" title="Brand Assets" description="Logos, fonts, and branding" />
      <NavLink href="/contact" title="Contact" description="Email & Discord info" />
    </ul>
  </section>

  <div class="separator-small"></div>

  <section class="content-box">
    <h2>External Links</h2>
    <ul class="nav-list">
      <NavLink href="https://www.youtube.com/@PnguNerf" title="YouTube" external />
      <NavLink href="https://github.com/pngu-nerf" title="GitHub" external />
      <NavLink href="https://www.printables.com/@PnguNerf_3188348" title="Printables" external />
    </ul>
  </section>

  <footer class="spacer-bottom"></footer>
</MainLayout>

<style>
  /* Header & Banner Styling */
  .index-header {
    width: 100%;
    margin-bottom: 1rem;
  }

  .banner-wrapper {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0 10px;
  }
  
  .banner-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.5);
    display: block;
    transition: transform var(--transition-bounce), box-shadow var(--transition-bounce);
    /* Banner doesn't need pointer events anymore since surprise is gone */
    pointer-events: none; 
  }

  /* Decorative Spacing */
  .separator { 
    text-align: center; 
    font-size: 2rem; 
    color: rgba(255, 255, 255, 0.2); 
    margin: 2.5rem 0; 
    font-weight: 300; 
    user-select: none;
  }

  .separator-small { 
    margin: 2rem 0; 
    height: 1px; 
  }

  .nav-list { 
    list-style: none; 
    padding: 0; 
    margin: 0; 
  }

  .spacer-bottom { 
    height: 80px; 
  }

  @media (max-width: 600px) {
    .banner-wrapper { padding: 0; }
    .separator { margin: 1.5rem 0; font-size: 1.5rem; }
  }
</style>
