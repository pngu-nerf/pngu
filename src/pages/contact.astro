<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Contact - pngu</title>
		<script>
			// Generic copy to clipboard function
			function copyToClipboard(text, buttonId, successMessage) {
				navigator.clipboard.writeText(text).then(() => {
					// Show success message
					const button = document.getElementById(buttonId);
					const originalText = button.innerHTML;
					button.innerHTML = successMessage;
					button.style.backgroundColor = '#10b981';
					
					// Reset button after 2 seconds
					setTimeout(() => {
						button.innerHTML = originalText;
						button.style.backgroundColor = '';
					}, 2000);
				}).catch(err => {
					console.error('Failed to copy: ', err);
					alert('Failed to copy to clipboard. Please copy manually: ' + text);
				});
			}
			
			// Copy email to clipboard
			function copyEmailToClipboard() {
				copyToClipboard('contact@pngu.info', 'copy-email-btn', '✓ Copied!');
			}
			
			// Copy Discord to clipboard
			function copyDiscordToClipboard() {
				copyToClipboard('penguinnoly', 'copy-discord-btn', '✓ Copied!');
			}
			
			// Initialize when page loads
			document.addEventListener('DOMContentLoaded', function() {
				// Email button
				const emailButton = document.getElementById('copy-email-btn');
				if (emailButton) {
					emailButton.addEventListener('click', copyEmailToClipboard);
				}
				
				// Discord button
				const discordButton = document.getElementById('copy-discord-btn');
				if (discordButton) {
					discordButton.addEventListener('click', copyDiscordToClipboard);
				}
			});
		</script>
		<style>
			body { 
				font-family: sans-serif; 
				padding: 2rem;
				text-align: center;
				max-width: 600px;
				margin: 0 auto;
				background-color: #0f0f0f;
				color: #ffffff;
			}
			
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				margin: 2rem 0;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
			}
			
			a { 
				color: #ffffff; 
				text-decoration: none; 
				font-weight: 500;
			}
			
			a:hover { 
				text-decoration: underline;
				color: #e0e0e0;
			}
			
			h1 {
				margin-top: 0;
				color: #ffffff;
				font-size: 2.5rem;
				margin-bottom: 1.5rem;
			}
			
			p {
				color: #e0e0e0;
				line-height: 1.6;
				font-size: 1.1rem;
				margin-bottom: 1.5rem;
			}
			
			.back-link {
				display: inline-block;
				margin-top: 1rem;
				padding: 0;
				background-color: #272727;
				border-radius: 6px;
			}
			
			.back-link:hover {
				background-color: #333333;
			}
			
			/* Make the back link anchor fill its container too */
			.back-link a {
				display: block;
				padding: 0.5rem 1rem;
				border-radius: 6px;
			}
			
			.back-link a:hover {
				text-decoration: none;
				background-color: #333333;
			}
			
			/* Contact section */
			.contact-section {
				margin: 2.5rem 0;
				padding: 1.5rem;
				background-color: rgba(255, 255, 255, 0.05);
				border-radius: 8px;
				border: 1px solid rgba(255, 255, 255, 0.1);
			}
			
			.contact-section:first-of-type {
				margin-top: 0;
			}
			
			.contact-label {
				color: #a0a0a0;
				font-size: 0.9rem;
				margin-bottom: 0.75rem;
				display: block;
			}
			
			.contact-display {
				font-family: 'Courier New', monospace;
				font-size: 1.2rem;
				color: #ffffff;
				margin-bottom: 1.5rem;
				padding: 0.75rem;
				background-color: rgba(255, 255, 255, 0.03);
				border-radius: 6px;
				word-break: break-all;
			}
			
			/* Copy button - styled like download buttons */
			.copy-button {
				display: inline-flex;
				align-items: center;
				justify-content: center;
				gap: 0.5rem;
				padding: 0.75rem 1.5rem;
				background-color: #404040;
				color: #ffffff;
				border: none;
				border-radius: 6px;
				font-size: 1rem;
				font-weight: 500;
				cursor: pointer;
				transition: all 0.2s ease;
				font-family: inherit;
				margin: 0.5rem;
			}
			
			.copy-button:hover {
				background-color: #4a4a4a;
				transform: translateY(-2px);
				box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
			}
			
			.copy-button:active {
				transform: translateY(0);
			}
			
			.copy-button.success {
				background-color: #10b981;
			}
			
			.copy-icon {
				font-size: 1.1rem;
			}
			
			/* Discord specific */
			.discord-handle {
				color: #7289da; /* Discord brand color */
			}
			
			.discord-icon {
				color: #7289da;
			}
			
			/* Email specific */
			.email-icon {
				color: #ea4335; /* Gmail red color */
			}
			
			/* Highlight color */
			.highlight {
				color: #646cff;
				font-weight: bold;
			}
			
			.subtitle {
				color: #a0a0a0;
				font-size: 1.2rem;
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<div class="content-box">
			<h1>Contact</h1>
			
			<!-- Email Section -->
			<div class="contact-section">
				<span class="contact-label">Email Address</span>
				<div class="contact-display">contact@pngu.info</div>
				
				<button id="copy-email-btn" class="copy-button">
					<span class="copy-icon email-icon"></span>
					Copy Email Address
				</button>
				
				<a href="mailto:contact@pngu.info" class="copy-button">
					<span class="copy-icon email-icon"></span>
					Open Email Client
				</a>
			</div>
			
			<!-- Discord Section -->
			<div class="contact-section">
				<span class="contact-label">Discord Handle</span>
				<div class="contact-display discord-handle">penguinnoly</div>
				
				<button id="copy-discord-btn" class="copy-button">
					<span class="copy-icon discord-icon"></span>
					Copy Discord Handle
				</button>
				</a>
			</div>
			
			<p class="back-link"><a href="/">← Back to Home</a></p>
		</div>
	</body>
</html>
