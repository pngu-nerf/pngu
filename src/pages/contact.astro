<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<title>Contact | PNGU</title>
		<script>
			// Generic copy to clipboard function
			function copyToClipboard(text, buttonId, successMessage, originalLabel) {
				navigator.clipboard.writeText(text).then(() => {
					// Show success message
					const button = document.getElementById(buttonId);
                    const labelSpan = button.querySelector('.download-label');
                    const originalText = labelSpan.innerText;
					
                    // Change text and color
					labelSpan.innerText = successMessage;
                    labelSpan.style.color = '#10b981'; // Green
					
					// Reset button after 2 seconds
					setTimeout(() => {
						labelSpan.innerText = originalText;
                        labelSpan.style.color = ''; // Reset to CSS default
					}, 2000);
				}).catch(err => {
					console.error('Failed to copy: ', err);
					alert('Failed to copy. Please copy manually: ' + text);
				});
			}
			
			// Initialize when page loads
			document.addEventListener('DOMContentLoaded', function() {
				// Email button
				const emailButton = document.getElementById('copy-email-btn');
				if (emailButton) {
					emailButton.addEventListener('click', () => {
                        copyToClipboard('contact@pngu.info', 'copy-email-btn', '✓ Copied!', 'Copy Email');
                    });
				}
				
				// Discord button
				const discordButton = document.getElementById('copy-discord-btn');
				if (discordButton) {
					discordButton.addEventListener('click', () => {
                        copyToClipboard('penguinnoly', 'copy-discord-btn', '✓ Copied!', 'Copy Handle');
                    });
				}
			});
		</script>
		<style>
			body {
				font-family: sans-serif;
				padding: 2rem;
				text-align: center;
				max-width: 800px; /* Matched to files page */
				margin: 0 auto;
				background-color: #0f0f0f;
				color: #ffffff;
			}
			
            /* --- Header Section (Matched) --- */
            .header-box {
                text-align: center;
                margin-bottom: 3rem;
            }

            .subtitle {
				color: #a0a0a0;
				font-size: 1.2rem;
			}

			h1 {
				margin-top: 0;
				color: #ffffff;
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
			}

            /* --- Content Box (Matched) --- */
			.content-box {
				background-color: #272727;
				border-radius: 12px;
				padding: 2rem;
				margin: 2rem 0;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                text-align: left;
			}
			
            h2 {
                margin-top: 0;
                font-size: 1.8rem;
                color: #ffffff;
                border-bottom: 1px solid #444;
                padding-bottom: 10px;
                margin-bottom: 15px;
            }
			
			p.description {
				color: #e0e0e0;
				line-height: 1.6;
				font-size: 1rem;
				margin-bottom: 1.5rem;
			}
			
			/* --- Back Link (Matched) --- */
			.back-link {
				display: inline-block;
				margin-top: 1rem;
				padding: 0;
				background-color: #272727;
				border-radius: 6px;
                text-align: center;
			}
			
			.back-link:hover { background-color: #333333; }
			.back-link a {
				display: block;
				padding: 0.5rem 1rem;
				border-radius: 6px;
                color: #fff;
                text-decoration: none;
			}

            /* --- Action Buttons (Styled like File Links) --- */
            .action-list {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            /* Using Button element but styled exactly like the <a> tags in previous pages */
            button.file-link {
                display: flex;
                justify-content: space-between;
                align-items: center;
                background-color: #1a1a1a;
                padding: 12px 16px;
                border-radius: 6px;
                transition: all 0.2s;
                text-decoration: none;
                color: #ffffff;
                width: 100%;
                border: none;
                font-family: inherit;
                font-size: 1rem;
                cursor: pointer;
            }

            button.file-link:hover {
                background-color: #333;
                color: #e0e0e0;
                transform: translateY(-1px);
            }

            button.file-link:active {
                transform: translateY(0);
            }

            .file-name {
                font-weight: 500;
                font-family: 'Courier New', monospace; /* Monospace for contact info looks techy */
            }

            .download-label {
                color: #646cff; /* Accent color */
                font-weight: 500;
                font-family: sans-serif;
            }
            
            button.file-link:hover .download-label {
                color: #8289ff;
            }
            
            /* Discord specific color tweak if desired */
            .discord-text {
                color: #7289da;
            }

		</style>
	</head>
	<body>
        <div class="header-box">
			<h1>Contact</h1>
            <p class="subtitle">Get in touch</p>
			<p class="back-link"><a href="/">← Back to Home</a></p>
		</div>

        <div class="content-box">
            <h2>Email Address</h2>
            <p class="description">For general inquiries, business, or questions.</p>
            
            <ul class="action-list">
                <li>
                    <button id="copy-email-btn" class="file-link">
                        <span class="file-name">contact@pngu.info</span>
                        <span class="download-label">Copy Email</span>
                    </button>
                </li>
            </ul>
		</div>

        <div class="content-box">
            <h2>Discord</h2>
            <p class="description">Direct messaging and quick chat.</p>
            
            <ul class="action-list">
                <li>
                    <button id="copy-discord-btn" class="file-link">
                        <span class="file-name discord-text">penguinnoly</span>
                        <span class="download-label">Copy Handle</span>
                    </button>
                </li>
            </ul>
        </div>
        
        <div style="margin-top: 3rem; opacity: 0.5; font-size: 0.8rem;">
            <p>Click buttons to copy to clipboard.</p>
        </div>
	</body>
</html>
