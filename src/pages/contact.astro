---
import MainLayout from '../layouts/MainLayout.astro';
import PageHeader from '../components/PageHeader.astro';
import ContactItem from '../components/ContactItem.astro';
---

<MainLayout title="Contact">
  <PageHeader title="Contact" subtitle="Reach out for collaborations or questions" />

  <div class="content-box">
    <h2>Email Address</h2>
    <p class="description">For professional inquiries and partnerships.</p>
    <ContactItem 
      buttonId="copy-email-btn" 
      value="contact@pngu.info" 
      label="Copy Email" 
    />
  </div>

  <div class="content-box">
    <h2>Discord</h2>
    <p class="description">For casual chats and community contact.</p>
    <ContactItem 
      buttonId="copy-discord-btn" 
      value="penguinnoly" 
      label="Copy Handle" 
    />
  </div>

  <div style="height: 40px;"></div>
</MainLayout>

<style>
  .description {
    color: var(--text-muted);
    line-height: 1.6;
    font-size: 1rem;
    margin-bottom: 1.5rem;
  }
</style>
