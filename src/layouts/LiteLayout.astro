---
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<style is:inline>
			:root { --bg: #333333; --text: #ffffff; --accent: #00d1ff; }
			body { background: var(--bg); color: var(--text); font-family: system-ui, sans-serif; max-width: 650px; margin: 0 auto; padding: 2rem 1rem; }
			a { color: var(--accent); text-decoration: none; }
			.box { border: 1px solid #444; padding: 1rem; margin-top: 1rem; }
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
