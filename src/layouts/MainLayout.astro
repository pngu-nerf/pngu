---
// src/layouts/MainLayout.astro
import BackgroundEffects from '../components/BackgroundEffects.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title} | PNGU</title>

		<style is:global>
			/* 1. THE "NUCLEAR OPTION" MOBILE FIX */
			/* This kills the blue highlight box site-wide on all clickable elements */
			a, button, summary, [role="button"], .banner-image {
				-webkit-tap-highlight-color: transparent;
				outline: none; /* Also removes the default browser focus ring */
			}

			/* 2. GLOBAL RESET & BOX MODEL */
			*, *::before, *::after {
				box-sizing: border-box;
				margin: 0;
				padding: 0;
			}

			/* 3. PERFORMANCE & FONT RENDERING */
			html {
				background-color: #0f0f0f;
				scroll-behavior: smooth;
				/* Makes text look sharper on high-res displays */
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}

			body {
				font-family: sans-serif;
				color: #ffffff;
				line-height: 1.5;
				min-height: 100vh;
				padding: 2rem;
				max-width: 900px;
				margin: 0 auto;
			}

			/* 4. REUSABLE BACKGROUND LAYER */
			#bg-layer {
				position: fixed;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				background-color: #0f0f0f;
				z-index: -2;
			}

			/* 5. MOBILE TEXT OPTIMIZATION */
			@media (max-width: 600px) {
				body { padding: 1rem; }
				h1 { font-size: 2rem !important; } /* Keeps headers from overflowing */
			}
		</style>
	</head>
	<body>
		<div id="bg-layer"></div>
		<BackgroundEffects />
		
		<slot />
	</body>
</html>
