---
/* IndexIntro.astro - 75% Point Reveal & Instant Snap */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>
<div id="intro-banner-overlay"></div>

<style is:global>
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
  }

  /* 1. INITIAL STATE: Hidden but ready for a fast pop */
  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
    transform: translateY(5px); /* Minimal travel for maximum snap */
  }

  /* 2. PERSISTENT BANNER OVERLAY */
  #intro-banner-overlay {
    position: fixed;
    z-index: 10001; 
    pointer-events: none;
    display: none;
    opacity: 1; 
    will-change: opacity;
  }

  #intro-banner-overlay img {
    width: 100%;
    height: auto;
    display: block;
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #000 0%, #000 75%, transparent 100%);
    transform: translateY(0); 
    pointer-events: none;
  }

  /* 3. ANIMATION - High-Speed 0.9s */
  .animate-wipe {
    transition: transform 0.9s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .reveal-static {
    visibility: visible !important;
    opacity: 1 !important;
    transition: opacity 0.1s linear !important;
  }

  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: 
      opacity 0.2s ease-out, 
      transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.1) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const overlay = document.getElementById('intro-banner-overlay');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      overlay?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    if (!actualBanner || !overlay) return;

    // PIN OVERLAY IMMEDIATELY
    const rect = actualBanner.getBoundingClientRect();
    overlay.style.width = `${rect.width}px`;
    overlay.style.top = `${rect.top}px`;
    overlay.style.left = `${rect.left}px`;
    overlay.innerHTML = `<img src="${actualBanner.src}" alt="Overlay Banner">`;
    overlay.style.display = 'block';

    window.scrollTo(0, 0);
    document.body.classList.add('is-intro');

    // ACT I: 2s Hold
    setTimeout(() => {
      if (blackout) blackout.style.display = 'none';
      
      if (wipe) {
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';
      }

      // ACT II: THE 3/4 REVEAL (0.9s duration * 0.75 = ~675ms)
      setTimeout(() => {
        document.body.classList.remove('is-intro');
        
        // Reveal Real Header
        const header = document.querySelector('.index-header');
        if (header) header.classList.add('reveal-static');

        // Reveal Content Blocks (Fast Stagger)
        const uiElements = document.querySelectorAll('.content-box, .separator, .separator-small');
        uiElements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('reveal-active');
          }, index * 20); // Hyper-tight stagger
        });

        // Handover: Overlay Fades out as page settles
        overlay.style.opacity = '0';
        overlay.style.transition = 'opacity 0.3s ease-in-out';

        // Cleanup
        setTimeout(() => {
          wipe?.remove();
          blackout?.remove();
          overlay?.remove();
          document.body.style.overflow = '';
          document.body.style.position = '';
        }, 500);
      }, 675); // This is the 3/4 point of a 0.9s wipe
    }, 2000); 
  }

  window.addEventListener('load', runIntro);
</script>
