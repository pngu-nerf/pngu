---
/* IndexIntro.astro - Stable Scroll Lock & Seamless Reveal */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>
<div id="intro-banner-overlay"></div>

<style is:global>
  /* 1. THE STABLE LOCK: Stops scrolling without the 'position: fixed' jump */
  html.is-intro-locked,
  body.is-intro-locked {
    overflow: hidden !important;
    height: 100% !important;
    width: 100% !important;
    touch-action: none;
  }

  /* 2. INITIAL HIDE: Content is invisible by default during intro */
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    opacity: 0;
    visibility: hidden;
    transform: translateY(8px);
    transition: none; /* No transitions until we trigger them */
  }

  /* 3. PERSISTENT LOGO: No Shadow, No Fade-in (Instant) */
  #intro-banner-overlay {
    position: fixed;
    z-index: 10001; 
    pointer-events: none;
    display: none;
    opacity: 1;
    will-change: opacity;
  }

  #intro-banner-overlay img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* 4. CURTAIN LAYERS */
  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #000 0%, #000 75%, transparent 100%);
    transform: translateY(0); 
    pointer-events: none;
    will-change: transform;
  }

  .animate-wipe {
    transition: transform 0.9s cubic-bezier(0.19, 1, 0.22, 1);
  }

  /* 5. REVEAL STATES: Defined clearly to handle the snap */
  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: 
      opacity 0.2s ease-out, 
      transform 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.1) !important;
  }

  .reveal-static {
    visibility: visible !important;
    opacity: 1 !important;
    transition: opacity 0.1s linear !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const overlay = document.getElementById('intro-banner-overlay');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      overlay?.remove();
      return; 
    }

    if (!actualBanner || !overlay) return;

    // A. INITIAL LOCKDOWN
    window.scrollTo(0, 0);
    document.documentElement.classList.add('is-intro-locked');
    document.body.classList.add('is-intro-locked');
    document.body.classList.add('is-intro');

    // B. PIN THE OVERLAY
    const rect = actualBanner.getBoundingClientRect();
    overlay.style.width = `${rect.width}px`;
    overlay.style.top = `${rect.top}px`;
    overlay.style.left = `${rect.left}px`;
    overlay.innerHTML = `<img src="${actualBanner.src}" alt="Overlay Banner">`;
    overlay.style.display = 'block';

    // C. THE 2s HOLD
    setTimeout(() => {
      // 1. Start the Wipe
      if (blackout) blackout.style.display = 'none';
      if (wipe) {
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';
      }

      // 2. THE OVERLAPPING REVEAL (175ms in)
      setTimeout(() => {
        // Pop the header and content
        const header = document.querySelector('.index-header');
        if (header) header.classList.add('reveal-static');

        const uiElements = document.querySelectorAll('.content-box, .separator, .separator-small');
        uiElements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('reveal-active');
          }, index * 20); 
        });

        // Start fading the overlay logo as real UI settles
        overlay.style.opacity = '0';
        overlay.style.transition = 'opacity 0.4s ease-in-out';
      }, 175);

      // 3. POST-ANIMATION UNLOCK (Wipe 900ms + Buffer 500ms = 1400ms)
      setTimeout(() => {
        // Remove the visual 'is-intro' class first
        document.body.classList.remove('is-intro');
        
        // Final Release of the scroll lock
        document.documentElement.classList.remove('is-intro-locked');
        document.body.classList.remove('is-intro-locked');

        // Clean up the DOM
        setTimeout(() => {
          wipe?.remove();
          blackout?.remove();
          overlay?.remove();
        }, 500);
      }, 1400);

    }, 2000); 
  }

  window.addEventListener('load', runIntro);
</script>
