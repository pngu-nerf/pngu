---
/* IndexIntro.astro - Final Alignment Fix */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>

<style is:global>
  /* LOCK SCROLL and FORCE TOP */
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    position: fixed; /* Prevents any "jump" if the browser tries to restore scroll position */
    width: 100%;
  }

  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
    transform: translateY(25px);
  }

  #intro-banner-proxy {
    position: fixed;
    z-index: 10001;
    width: 85vw; 
    height: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.9));
    pointer-events: none;
    will-change: transform, width, top, left, opacity;
    opacity: 0;
    transition: opacity 0.8s ease-out;
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #000 0%, #000 75%, transparent 100%);
    transform: translateY(0); 
    pointer-events: none;
  }

  .animate-banner {
    transition: 
      top 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      left 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      width 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      transform 1.2s cubic-bezier(0.19, 1, 0.22, 1) !important;
  }

  .animate-wipe {
    transition: transform 1.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: opacity 0.8s ease-out, transform 0.8s cubic-bezier(0.23, 1, 0.32, 1) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    if (!actualBanner || !blackout || !wipe) return;

    // 1. FORCE TOP AND LOCK
    window.scrollTo({ top: 0, left: 0, behavior: 'instant' });
    document.body.classList.add('is-intro');
    
    // 2. SETUP PROXY
    const proxy = actualBanner.cloneNode(true) as HTMLImageElement;
    proxy.id = 'intro-banner-proxy';
    document.body.appendChild(proxy);

    // 3. FORCE LAYOUT CALCULATIONS
    // This dummy variable forces the browser to calculate the banner's true position at scroll 0
    const forceLayout = actualBanner.offsetHeight; 

    requestAnimationFrame(() => {
      proxy.style.opacity = '1';

      setTimeout(() => {
        // Recalculate rect only when we are ready to move
        const targetRect = actualBanner.getBoundingClientRect();
        
        proxy.classList.add('animate-banner');
        // We use absolute center coordinates relative to the viewport
        proxy.style.top = `${targetRect.top + (targetRect.height / 2)}px`;
        proxy.style.left = `${targetRect.left + (targetRect.width / 2)}px`;
        proxy.style.width = `${targetRect.width}px`;

        setTimeout(() => {
          blackout.style.display = 'none';
          wipe.classList.add('animate-wipe');
          wipe.style.transform = 'translateY(-100%)';

          setTimeout(() => {
            // RELEASE FIXED POSITION
            document.body.classList.remove('is-intro');
            
            const uiElements = document.querySelectorAll('.index-header, .content-box, .separator, .separator-small');
            uiElements.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('reveal-active');
              }, index * 120);
            });

            setTimeout(() => {
              proxy.remove();
              wipe.remove();
            }, 1200);
          }, 1000); 
        }, 500);
      }, 800);
    });
  }

  // Use 'load' instead of 'DOMContentLoaded' to ensure images and layout are fully ready
  window.addEventListener('load', runIntro);
</script>
