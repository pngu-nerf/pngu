---
/* IndexIntro.astro - Flat Overlay & Instant Reveal */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>
<div id="intro-banner-overlay"></div>

<style is:global>
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
  }

  /* Real UI hidden but ready to snap */
  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
  }

  body.is-intro .content-box,
  body.is-intro .separator {
    transform: translateY(12px);
  }

  /* Static Overlay (The Shield) - NOW FLAT (No Shadow) */
  #intro-banner-overlay {
    position: fixed;
    z-index: 10001; 
    pointer-events: none;
    display: none;
    opacity: 0;
    will-change: opacity;
    /* Shadow removed here */
  }

  #intro-banner-overlay img {
    width: 100%;
    height: auto;
    display: block;
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #000 0%, #000 75%, transparent 100%);
    transform: translateY(0); 
    pointer-events: none;
  }

  .animate-wipe {
    transition: transform 1.0s cubic-bezier(0.19, 1, 0.22, 1);
  }

  .reveal-static {
    visibility: visible !important;
    opacity: 1 !important;
    transition: opacity 0.1s linear !important; /* Instant snap */
  }

  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: 
      opacity 0.3s ease-out, 
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const overlay = document.getElementById('intro-banner-overlay');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      overlay?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    if (!actualBanner || !overlay) return;

    const rect = actualBanner.getBoundingClientRect();
    overlay.style.width = `${rect.width}px`;
    overlay.style.top = `${rect.top}px`;
    overlay.style.left = `${rect.left}px`;
    overlay.innerHTML = `<img src="${actualBanner.src}" alt="Overlay Banner">`;
    overlay.style.display = 'block';

    window.scrollTo(0, 0);
    document.body.classList.add('is-intro');

    // 1. ACT I: The 2s Blackout Hold
    setTimeout(() => {
      // Fade logo in quickly
      overlay.style.opacity = '1';
      overlay.style.transition = 'opacity 0.4s ease-out';
      
      if (blackout) blackout.style.display = 'none';
      if (wipe) {
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';
      }

      // 2. ACT II: The INSTANT Reveal (Triggered almost immediately)
      setTimeout(() => {
        // We reveal the real UI UNDER the overlay immediately
        const header = document.querySelector('.index-header');
        if (header) header.classList.add('reveal-static');

        const uiElements = document.querySelectorAll('.content-box, .separator, .separator-small');
        uiElements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('reveal-active');
          }, index * 50);
        });

        // 3. ACT III: The Shield Dissolve (Overlay persists)
        setTimeout(() => {
          document.body.classList.remove('is-intro');
          overlay.style.opacity = '0';
          overlay.style.transition = 'opacity 0.5s ease-in-out';

          setTimeout(() => {
            wipe?.remove();
            blackout?.remove();
            overlay?.remove();
            document.body.style.overflow = '';
            document.body.style.position = '';
          }, 600);
        }, 800); // Overlay persists for 800ms AFTER the snappy reveal starts
      }, 50); // CHANGED: Reduced from 300ms to 50ms for instant trigger
    }, 2000); 
  }

  window.addEventListener('load', runIntro);
</script>
