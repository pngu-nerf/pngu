---
/* IndexIntro.astro - Snappy Reveal with Static Header */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>

<style is:global>
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
  }

  /* 1. INITIAL STATE */
  body.is-intro .index-header {
    visibility: hidden !important;
    opacity: 0 !important;
    /* No transform here to keep it perfectly still */
  }

  body.is-intro .content-box, 
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
    transform: translateY(12px);
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(
      to bottom, 
      #000 0%, 
      #000 75%, 
      transparent 100%
    );
    transform: translateY(0); 
    pointer-events: none;
    will-change: transform;
  }

  .animate-wipe {
    transition: transform 1.0s cubic-bezier(0.19, 1, 0.22, 1);
  }

  /* 2. STATIC REVEAL (For the Header) */
  .reveal-static {
    visibility: visible !important;
    opacity: 1 !important;
    /* No motion transition, just a quick opacity snap */
    transition: opacity 0.2s ease-out !important;
  }

  /* 3. SNAPPY REVEAL (For the Content Blocks) */
  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: 
      opacity 0.3s ease-out, 
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    window.scrollTo(0, 0);
    document.body.classList.add('is-intro');

    setTimeout(() => {
      if (blackout) blackout.style.display = 'none';
      if (wipe) {
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';
      }

      setTimeout(() => {
        document.body.classList.remove('is-intro');
        
        // Target the header separately for the static reveal
        const header = document.querySelector('.index-header');
        if (header) header.classList.add('reveal-static');

        // Target content boxes for the snappy reveal
        const uiElements = document.querySelectorAll('.content-box, .separator, .separator-small');
        uiElements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('reveal-active');
          }, index * 50);
        });

        setTimeout(() => {
          wipe?.remove();
          blackout?.remove();
          document.body.style.overflow = '';
          document.body.style.position = '';
        }, 1000);
      }, 400); 
    }, 300);
  }

  window.addEventListener('load', runIntro);
</script>
