---
/* IndexIntro.astro - Absolute Coordinate Lock */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>

<style is:global>
  /* 1. LOCK THE VIEWPORT */
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
  }

  /* 2. HIDE REAL CONTENT */
  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
    transform: translateY(25px);
  }

  /* 3. BANNER PROXY */
  #intro-banner-proxy {
    position: fixed;
    z-index: 10001;
    width: 85vw; 
    height: auto;
    /* Start dead center */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.9));
    pointer-events: none;
    will-change: transform, width, top, left, opacity;
    opacity: 0;
    transition: opacity 0.8s ease-out;
  }

  /* Transition state for the flight */
  #intro-banner-proxy.animate-banner {
    /* Use the JS-calculated CSS variables for the destination */
    top: var(--target-top) !important;
    left: var(--target-left) !important;
    width: var(--target-width) !important;
    /* We switch transform to center the new width properly */
    transform: translate(-50%, -50%) !important;
    transition: 
      top 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      left 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      width 1.2s cubic-bezier(0.19, 1, 0.22, 1),
      transform 1.2s cubic-bezier(0.19, 1, 0.22, 1) !important;
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(to bottom, #000 0%, #000 75%, transparent 100%);
    transform: translateY(0); 
    pointer-events: none;
  }

  .animate-wipe {
    transition: transform 1.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    transition: opacity 0.8s ease-out, transform 0.8s cubic-bezier(0.23, 1, 0.32, 1) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    if (!actualBanner || !blackout || !wipe) return;

    // 1. Force the page to the top and lock it
    window.scrollTo(0, 0);
    document.body.classList.add('is-intro');
    
    // 2. Clone the banner
    const proxy = actualBanner.cloneNode(true) as HTMLImageElement;
    proxy.id = 'intro-banner-proxy';
    document.body.appendChild(proxy);

    // 3. Pre-calculate the landing zone immediately
    const rect = actualBanner.getBoundingClientRect();
    const destTop = `${rect.top + (rect.height / 2)}px`;
    const destLeft = `${rect.left + (rect.width / 2)}px`;
    const destWidth = `${rect.width}px`;

    // Inject these into the proxy's styles as CSS variables
    proxy.style.setProperty('--target-top', destTop);
    proxy.style.setProperty('--target-left', destLeft);
    proxy.style.setProperty('--target-width', destWidth);

    // 4. Start Sequence
    requestAnimationFrame(() => {
      // Fade in the big logo
      proxy.style.opacity = '1';

      setTimeout(() => {
        // Trigger flight via class (uses the CSS variables we set)
        proxy.classList.add('animate-banner');

        setTimeout(() => {
          blackout.style.display = 'none';
          wipe.classList.add('animate-wipe');
          wipe.style.transform = 'translateY(-100%)';

          setTimeout(() => {
            document.body.classList.remove('is-intro');
            
            const uiElements = document.querySelectorAll('.index-header, .content-box, .separator, .separator-small');
            uiElements.forEach((el, index) => {
              setTimeout(() => {
                el.classList.add('reveal-active');
              }, index * 100);
            });

            setTimeout(() => {
              proxy.remove();
              wipe.remove();
              blackout.remove();
            }, 1200);
          }, 1000); 
        }, 500);
      }, 800);
    });
  }

  window.addEventListener('load', runIntro);
</script>
