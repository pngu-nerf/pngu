---
/* IndexIntro.astro - High-Speed Snappy Reveal */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>

<style is:global>
  body.is-intro {
    overflow: hidden !important;
    height: 100vh !important;
    position: fixed;
    width: 100%;
    top: 0;
    left: 0;
  }

  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box,
  body.is-intro .separator,
  body.is-intro .separator-small {
    visibility: hidden !important;
    opacity: 0 !important;
    transform: translateY(12px); /* Reduced distance for faster-feeling motion */
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh;
    z-index: 9999;
    background: linear-gradient(
      to bottom, 
      #000 0%, 
      #000 75%, 
      transparent 100%
    );
    transform: translateY(0); 
    pointer-events: none;
    will-change: transform;
  }

  /* 1. FASTER WIPE */
  .animate-wipe {
    /* Reduced to 1.0s for an aggressive pull-back */
    transition: transform 1.0s cubic-bezier(0.19, 1, 0.22, 1);
  }

  /* 2. SNAPPY REVEAL */
  .reveal-active {
    visibility: visible !important;
    opacity: 1 !important;
    transform: translateY(0) !important;
    /* Faster 0.3s fade for that 'snap' feel */
    transition: 
      opacity 0.3s ease-out, 
      transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
  }
</style>

<script>
  function runIntro() {
    const internalReferrer = document.referrer && document.referrer.includes(window.location.hostname);
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');

    if (internalReferrer) {
      blackout?.remove();
      wipe?.remove();
      document.body.classList.remove('is-intro');
      return; 
    }

    window.scrollTo(0, 0);
    document.body.classList.add('is-intro');

    // Start Sequence
    setTimeout(() => {
      if (blackout) blackout.style.display = 'none';
      
      if (wipe) {
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';
      }

      // 3. EARLIER TRIGGER
      // We trigger the reveal much sooner (400ms) so content arrives while the curtain is still moving
      setTimeout(() => {
        document.body.classList.remove('is-intro');
        
        const uiElements = document.querySelectorAll('.index-header, .content-box, .separator, .separator-small');
        uiElements.forEach((el, index) => {
          setTimeout(() => {
            el.classList.add('reveal-active');
          }, index * 50); // Tight 50ms stagger
        });

        setTimeout(() => {
          wipe?.remove();
          blackout?.remove();
        }, 1000);
      }, 400); 
    }, 300); // Shorter hold on pure black
  }

  window.addEventListener('load', runIntro);
</script>
