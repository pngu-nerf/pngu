---
/* IndexIntro.astro - No-Glitch Choreography */
---

<div id="intro-blackout"></div>
<div id="wipe-layer"></div>

<style is:global>
  /* 1. Prevent the "Glimpse" - Keep content invisible but present */
  body.is-intro main, 
  body.is-intro .index-header,
  body.is-intro .content-box {
    visibility: hidden !important;
    opacity: 0 !important;
  }

  /* 2. Banner Proxy (The only thing visible) */
  #intro-banner-proxy {
    position: fixed;
    z-index: 10001;
    width: 50vw; 
    height: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    filter: drop-shadow(0 15px 30px rgba(0,0,0,0.8));
    pointer-events: none;
    will-change: transform, width, top, left;
  }

  #intro-blackout {
    position: fixed;
    inset: 0;
    background: #000;
    z-index: 10000;
  }

  #wipe-layer {
    position: fixed;
    inset: 0;
    height: 400vh; /* Massive height */
    z-index: 9999;
    background: linear-gradient(
      to bottom, 
      #000 0%, 
      #000 75%, 
      transparent 100%
    );
    /* Start exactly covering the screen */
    transform: translateY(0); 
    pointer-events: none;
    will-change: transform;
  }

  .animate-banner {
    transition: all 1.4s cubic-bezier(0.65, 0, 0.35, 1);
  }

  .animate-wipe {
    transition: transform 1.8s cubic-bezier(0.16, 1, 0.3, 1);
  }
</style>

<script>
  window.addEventListener('load', () => {
    if (window.location.pathname !== '/' && window.location.pathname !== '/index.html') return;

    const body = document.body;
    const blackout = document.getElementById('intro-blackout');
    const wipe = document.getElementById('wipe-layer');
    const actualBanner = document.querySelector('.banner-image') as HTMLImageElement;
    
    if (!actualBanner || !blackout || !wipe) return;

    // A. Setup
    body.classList.add('is-intro');
    const proxy = actualBanner.cloneNode(true) as HTMLImageElement;
    proxy.id = 'intro-banner-proxy';
    body.appendChild(proxy);

    // B. The Movement
    setTimeout(() => {
      const targetRect = actualBanner.getBoundingClientRect();
      
      proxy.classList.add('animate-banner');
      proxy.style.top = `${targetRect.top + (targetRect.height / 2)}px`;
      proxy.style.left = `${targetRect.left + (targetRect.width / 2)}px`;
      proxy.style.width = `${targetRect.width}px`;

      // C. The Wipe (The Hand-off)
      setTimeout(() => {
        // First, kill the blackout. The WIPE is already at translateY(0), so it takes over.
        blackout.style.display = 'none';
        
        // Now move the wipe up
        wipe.classList.add('animate-wipe');
        wipe.style.transform = 'translateY(-100%)';

        // D. Final Reveal (Wait until the wipe is 90% done to prevent the "jump")
        setTimeout(() => {
          body.classList.remove('is-intro');
          
          // Smooth fade-in of the real UI
          const ui = document.querySelectorAll('main, .index-header, .content-box, .separator');
          ui.forEach(el => {
            (el as HTMLElement).style.visibility = 'visible';
            (el as HTMLElement).style.opacity = '1';
            (el as HTMLElement).style.transition = 'opacity 0.8s ease';
          });

          // Final Cleanup
          setTimeout(() => {
            proxy.remove();
            wipe.remove();
          }, 1000);
        }, 1400); 
      }, 400);
    }, 600);
  });
</script>
