---
/* ScreenOverlay.astro - Linear Direct-Action Zoom */
---

<div id="screen-overlay"></div>

<svg style="position: absolute; width: 0; height: 0;">
  <filter id="fuzz">
    <feGaussianBlur in="SourceGraphic" stdDeviation="8" />
  </filter>
</svg>

<style>
  #screen-overlay {
    position: fixed;
    inset: 0;
    z-index: 9999;
    background-color: #000;
    pointer-events: none;
    
    /* The Mask */
    mask-image: url('/brand-assets/PNGU-logo-white.svg'), linear-gradient(#fff, #fff);
    -webkit-mask-image: url('/brand-assets/PNGU-logo-white.svg'), linear-gradient(#fff, #fff);
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    mask-composite: exclude;
    -webkit-mask-composite: xor;

    /* Start at full reveal size immediately */
    mask-size: 180px auto, 100% 100%;
    -webkit-mask-size: 180px auto, 100% 100%;

    filter: url(#fuzz);
  }

  /* LINEAR ZOOM: Constant velocity from 0 to finish */
  #screen-overlay.zoom-active {
    animation: 
      linear-zoom 1.2s linear forwards,
      bg-fade 1.2s linear forwards;
  }

  @keyframes linear-zoom {
    from {
      mask-size: 180px auto, 100% 100%;
      -webkit-mask-size: 180px auto, 100% 100%;
    }
    to {
      mask-size: 60000px auto, 100% 100%;
      -webkit-mask-size: 60000px auto, 100% 100%;
    }
  }

  @keyframes bg-fade {
    from { background-color: #000; }
    to { background-color: rgba(20, 20, 20, 0.4); }
  }

  #screen-overlay.finished {
     display: none;
  }
</style>

<script>
  window.addEventListener('DOMContentLoaded', () => {
    const overlay = document.getElementById('screen-overlay');
    const banner = document.querySelector('.banner-image');
    if (!overlay) return;

    // 1. Calculations
    let startX = window.innerWidth / 2;
    let startY = window.innerHeight / 2;

    if (banner) {
      const rect = banner.getBoundingClientRect();
      startX = rect.left + rect.width / 2;
      startY = rect.top + rect.height / 2;
    }

    /* SVG FIX: Shifting the center point 
       Since the SVG is off-center in its own design, we move the 
       mask position to the right by 1/3 of the initial logo width (180px).
       180 / 3 = 60px shift.
    */
    const xShift = 60; 
    const finalX = startX + xShift;

    // Set positions (fixed pixels are more reliable for a linear zoom)
    const posString = `${finalX}px ${startY}px, center`;
    overlay.style.maskPosition = posString;
    overlay.style.webkitMaskPosition = posString;

    // 2. Immediate Action
    // Using requestAnimationFrame to ensure it triggers the moment the browser is ready
    requestAnimationFrame(() => {
        overlay.classList.add('zoom-active');
        
        setTimeout(() => {
            overlay.classList.add('finished');
        }, 1250);
    });
  });
</script>
