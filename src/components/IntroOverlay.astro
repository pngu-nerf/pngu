---
/* ScreenOverlay.astro - Cinematic Zoom Sequence */
---

<div id="screen-overlay"></div>

<style>
  #screen-overlay {
    position: fixed;
    inset: 0;
    z-index: 9999;
    
    /* 1. START FULL BLACK */
    background-color: #000;
    
    /* 2. PREPARE THE CUTOUT MASK */
    mask-image: url('/brand-assets/PNGU-logo-white.svg'), linear-gradient(#fff, #fff);
    -webkit-mask-image: url('/brand-assets/PNGU-logo-white.svg'), linear-gradient(#fff, #fff);
    mask-position: center;
    -webkit-mask-position: center;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    mask-composite: exclude;
    -webkit-mask-composite: xor;

    /* Start with the logo effectively invisible (0 size) */
    mask-size: 0px auto, 100% 100%;
    -webkit-mask-size: 0px auto, 100% 100%;

    /* SLIGHTLY BLURRY EDGES ALWAYS */
    filter: blur(4px);
    
    /* Transition for the fade-in of the cutout */
    transition: mask-size 0.8s ease-out, -webkit-mask-size 0.8s ease-out, opacity 0.5s;
    pointer-events: none;
  }

  /* STAGE 1: Logo Cutout Fades In */
  #screen-overlay.logo-visible {
    mask-size: 180px auto, 100% 100%;
    -webkit-mask-size: 180px auto, 100% 100%;
  }

  /* STAGE 2: Zoom + Background Shift */
  #screen-overlay.zoom-active {
    animation: 
      zoom-sequence 2s cubic-bezier(0.7, 0, 0.3, 1) forwards,
      bg-shift 2s ease-in-out forwards;
  }

  /* ZOOM ANIMATION */
  @keyframes zoom-sequence {
    0% {
      -webkit-mask-size: 180px auto, 100% 100%;
      mask-size: 180px auto, 100% 100%;
    }
    100% {
      -webkit-mask-size: 25000px auto, 100% 100%;
      mask-size: 25000px auto, 100% 100%;
    }
  }

  /* BACKGROUND TRANSITION (Fades from Black to partial Liquid Glass) */
  @keyframes bg-shift {
    0% {
      background-color: #000;
      backdrop-filter: blur(0px);
      -webkit-backdrop-filter: blur(0px);
    }
    100% {
      /* We stop before reaching the full transparent glass look */
      background-color: rgba(25, 25, 25, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
    }
  }

  #screen-overlay.finished {
     display: none;
  }

  @media (max-width: 600px) {
    #screen-overlay.logo-visible {
      mask-size: 120px auto, 100% 100%;
      -webkit-mask-size: 120px auto, 100% 100%;
    }
  }
</style>

<script>
  window.addEventListener('load', () => {
    const overlay = document.getElementById('screen-overlay');
    if (!overlay) return;

    // 1. Brief pause on full black, then fade in the cutout
    setTimeout(() => {
        overlay.classList.add('logo-visible');
        
        // 2. Wait for the logo to be seen, then start the zoom/bg-shift
        setTimeout(() => {
            overlay.classList.add('zoom-active');
            
            // 3. Remove entirely once the "zoom through" is done
            setTimeout(() => {
                overlay.style.opacity = "0";
                setTimeout(() => {
                    overlay.classList.add('finished');
                }, 500);
            }, 1800);
        }, 1000); 
    }, 300); 
  });
</script>
