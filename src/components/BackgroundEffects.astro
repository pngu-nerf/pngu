---
// src/components/BackgroundEffects.astro
---
<canvas id="tech-canvas"></canvas>

<style>
    #tech-canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        
        /* Blur Effect */
        filter: blur(30px);

        /* Initial State: Lowered starting opacity */
        opacity: 0.4;
        
        /* Animation: Smoothly brighten to 0.8 (20% overall reduction) */
        animation: brightenUp 2s ease-out forwards;

        /* Mobile Optimization */
        will-change: opacity;
    }

    @keyframes brightenUp {
        from { opacity: 0.4; }
        to { opacity: 0.8; } 
    }
</style>

<script>
    const canvas = document.getElementById('tech-canvas') as HTMLCanvasElement;
    const ctx = canvas.getContext('2d');

    let width, height;
    let strands = [];
    
    let mouseX = -1000;
    let mouseSpeedX = 0;

    window.addEventListener('mousemove', (e) => {
        mouseSpeedX = e.movementX;
        mouseX = e.clientX;
    });

    const STRAND_COLOR = '255, 255, 255'; 

    class Strand {
        x: number;
        length: number;
        thickness: number;
        offset: number;
        amplitude: number;
        frequency: number;
        depth: number;
        strumVal: number; 
        strumVel: number; 
        highlight: number;
        
        // New properties for layering
        alphaMult: number; 
        drawnDepth: number;

        // Updated constructor to accept layer config
        constructor(index, totalStrands, layerCfg) {
            this.init(index, totalStrands, layerCfg);
        }

        init(index, totalStrands, layerCfg) {
            // Jittered spacing logic
            const slotWidth = width / totalStrands;
            const slotStart = index * slotWidth;
            this.x = slotStart + (Math.random() * (slotWidth * 0.8)) + (slotWidth * 0.1);

            this.length = height; 
            
            // Base depth (0.0 to 1.0) within its own layer
            this.depth = Math.random();

            // Calculate actual depth for sorting (ensures back layers stay back)
            this.drawnDepth = this.depth + layerCfg.zOffset;

            // Store brightness multiplier
            this.alphaMult = layerCfg.alphaMult;

            // Calculate Thickness: 
            // Base (5px-45px) * Layer Multiplier
            const baseThickness = (0.5 + (this.depth * 4)) * 10;
            this.thickness = baseThickness * layerCfg.thickMult;
            
            this.offset = Math.random() * 100; 
            this.amplitude = Math.random() * 50 + 20; 
            this.frequency = Math.random() * 0.002 + 0.001; 
            
            this.strumVal = 0;
            this.strumVel = 0;
            this.highlight = 0;
        }

        update() {
            this.offset += 0.005;

            const tension = 0.5; 
            const damping = 0.2; 
            
            const force = -tension * this.strumVal;
            this.strumVel += force;
            this.strumVel *= damping; 
            this.strumVal += this.strumVel;

            this.highlight *= 0.9; 

            const dist = Math.abs(mouseX - this.x);
            
            // Interaction radius scales slightly with layer thickness mult
            if (dist < (150 * this.alphaMult)) { 
                // Interaction physics relies on relative depth within layer
                const depthImpact = 0.1 + (this.depth * 0.9);
                this.strumVel += (mouseSpeedX * 0.02) * depthImpact;
                this.highlight = Math.min(this.highlight + 0.1 + Math.abs(mouseSpeedX * 0.005), 1.0);
            }
        }

        draw() {
            if (!ctx) return;
            
            ctx.beginPath();
            
            // Calculate base brightness based on depth
            const baseMaxAlpha = 0.2 + (this.depth * 0.8);
            // Apply layer multiplier
            const finalMaxAlpha = baseMaxAlpha * this.alphaMult;

            const grad = ctx.createLinearGradient(this.x, 0, this.x, height);
            
            // Use finalMaxAlpha for gradient colors
            grad.addColorStop(0, `rgba(${STRAND_COLOR}, 0)`);
            grad.addColorStop(0.2, `rgba(${STRAND_COLOR}, ${finalMaxAlpha})`); 
            grad.addColorStop(1, `rgba(${STRAND_COLOR}, ${finalMaxAlpha})`);

            ctx.strokeStyle = grad;
            
            ctx.lineWidth = this.thickness + (this.highlight * 2);
            ctx.lineCap = 'round';
            
            const segments = 25;
            const segmentHeight = this.length / segments;

            ctx.moveTo(
                this.x + Math.sin(this.offset) * this.amplitude, 
                0
            );

            for (let i = 0; i <= segments; i++) {
                let currentY = segmentHeight * i;
                
                const ambientSway = Math.sin(this.offset + (i * 0.2)) * this.amplitude;
                const strumEffect = this.strumVal * Math.sin((i / segments) * Math.PI);
                
                ctx.lineTo(this.x + ambientSway + strumEffect, currentY);
            }

            // Scale shadow intensity by alphaMult
            ctx.shadowBlur = (5 + (this.highlight * 20)) * this.depth;
            ctx.shadowColor = `rgba(255, 255, 255, ${(0.5 + this.highlight * 0.5) * this.alphaMult})`;

            ctx.stroke();
            ctx.shadowBlur = 0; 
        }
    }

    function resize() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
        
        strands = [];
        const BASE_COUNT = Math.floor(Math.random() * 2) + 5;

        // Define Layers (Back to Front)
        // zOffset ensures sorting order. 
        // alphaMult calculates the compounding 50% dimmer requirement.
        const layers = [
            // Layer 3 (Backmost): 2.25x count, 0.25x thick, 20% bright, offset -2
            { countMult: 2.25, thickMult: 0.25, alphaMult: 0.2, zOffset: -2 },
            // Layer 2 (Middle): 1.5x count, 0.5x thick, 40% bright, offset -1
            { countMult: 1.5,  thickMult: 0.5,  alphaMult: 0.4, zOffset: -1 },
            // Layer 1 (Front): 1x count, 1x thick, 80% bright (Base), offset 0
            { countMult: 1.0,  thickMult: 1.0,  alphaMult: 0.8, zOffset: 0  }
        ];

        // Generate strands for each layer
        layers.forEach(layerCfg => {
            const layerCount = Math.round(BASE_COUNT * layerCfg.countMult);
            for (let i = 0; i < layerCount; i++) {
                strands.push(new Strand(i, layerCount, layerCfg));
            }
        });
    }

    function animate() {
        if (!ctx) return;
        ctx.clearRect(0, 0, width, height);

        // Important: Sort by drawnDepth so back layers draw first
        strands.sort((a, b) => a.drawnDepth - b.drawnDepth);

        strands.forEach(strand => {
            strand.update();
            strand.draw();
        });
        
        mouseSpeedX = 0;

        requestAnimationFrame(animate);
    }

    window.addEventListener('resize', resize);
    resize();
    animate();
</script>
