---
// src/components/BackgroundEffects.astro
---
<canvas id="tech-canvas"></canvas>

<style>
    #tech-canvas {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        pointer-events: none;
        
        opacity: 0;
        animation: subtleFadeIn 1s ease-in-out 1s forwards;
    }

    @keyframes subtleFadeIn {
        from { opacity: 0; }
        to { opacity: 0.3; } 
    }
</style>

<script>
    const canvas = document.getElementById('tech-canvas') as HTMLCanvasElement;
    const ctx = canvas.getContext('2d');

    let width, height;
    let strands = [];
    
    let mouseX = -1000;
    let mouseSpeedX = 0;

    window.addEventListener('mousemove', (e) => {
        mouseSpeedX = e.movementX;
        mouseX = e.clientX;
    });

    const STRAND_COUNT = 20; // Increased count slightly for depth density
    const STRAND_COLOR = '255, 255, 255'; 

    class Strand {
        x: number;
        length: number;
        thickness: number;
        offset: number;
        amplitude: number;
        frequency: number;
        
        // Depth: 0 = Far/Small/Dim, 1 = Close/Big/Bright
        depth: number;

        // Physics
        strumVal: number; 
        strumVel: number; 
        
        // Glow State
        highlight: number; 

        constructor() {
            this.init();
        }

        init() {
            this.x = Math.random() * width;
            this.length = height; 
            
            // 1. RANDOMIZE DEPTH
            this.depth = Math.random();

            // 2. SIZE BASED ON DEPTH
            // Far strands are 0.5px, Close strands up to 4.5px
            this.thickness = 0.5 + (this.depth * 4);
            
            this.offset = Math.random() * 100; 
            this.amplitude = Math.random() * 50 + 20; 
            this.frequency = Math.random() * 0.002 + 0.001; 
            
            this.strumVal = 0;
            this.strumVel = 0;
            this.highlight = 0;
        }

        update() {
            this.offset += 0.005;

            // 3. STABILIZED PHYSICS (Less Wobbly)
            // Higher tension (0.1) makes it snap back faster
            // Lower damping (0.9) makes it settle/stop moving faster
            const tension = 0.1; 
            const damping = 0.9; 
            
            const force = -tension * this.strumVal;
            this.strumVel += force;
            this.strumVel *= damping; 
            this.strumVal += this.strumVel;

            this.highlight *= 0.9; 

            // Mouse Interaction
            const dist = Math.abs(mouseX - this.x);
            
            // Larger hit area for smoother feel
            if (dist < 60) {
                // 4. DEPTH-BASED INTERACTION
                // Close strands (depth 1) get full force
                // Far strands (depth 0) get 10% force
                const depthImpact = 0.1 + (this.depth * 0.9);

                // Reduced base multiplier (0.02) for less chaos
                this.strumVel += (mouseSpeedX * 0.02) * depthImpact;
                
                this.highlight = Math.min(this.highlight + 0.1 + Math.abs(mouseSpeedX * 0.005), 1.0);
            }
        }

        draw() {
            if (!ctx) return;
            
            ctx.beginPath();
            
            // 5. BRIGHTNESS BASED ON DEPTH
            // Far strands max out at 0.2 opacity, Close at 1.0
            const maxAlpha = 0.2 + (this.depth * 0.8);

            const grad = ctx.createLinearGradient(this.x, 0, this.x, height);
            grad.addColorStop(0, `rgba(${STRAND_COLOR}, 0)`);
            grad.addColorStop(0.5, `rgba(${STRAND_COLOR}, ${maxAlpha})`); 
            grad.addColorStop(1, `rgba(${STRAND_COLOR}, 0)`);

            ctx.strokeStyle = grad;
            
            // Dynamic thickness + highlight expansion
            ctx.lineWidth = this.thickness + (this.highlight * 2);
            ctx.lineCap = 'round';
            
            const segments = 25;
            const segmentHeight = this.length / segments;

            ctx.moveTo(
                this.x + Math.sin(this.offset) * this.amplitude, 
                0
            );

            for (let i = 0; i <= segments; i++) {
                let currentY = segmentHeight * i;
                
                const ambientSway = Math.sin(this.offset + (i * 0.2)) * this.amplitude;
                const strumEffect = this.strumVal * Math.sin((i / segments) * Math.PI);
                
                ctx.lineTo(this.x + ambientSway + strumEffect, currentY);
            }

            // Glow increases based on depth too (closer glows more)
            ctx.shadowBlur = (5 + (this.highlight * 20)) * this.depth;
            ctx.shadowColor = `rgba(255, 255, 255, ${0.5 + this.highlight * 0.5})`;

            ctx.stroke();
            
            ctx.shadowBlur = 0; 
        }
    }

    function resize() {
        width = window.innerWidth;
        height = window.innerHeight;
        canvas.width = width;
        canvas.height = height;
        
        strands = [];
        for (let i = 0; i < STRAND_COUNT; i++) {
            strands.push(new Strand());
        }
    }

    function animate() {
        if (!ctx) return;
        ctx.clearRect(0, 0, width, height);

        // Sort strands by depth (draw far ones first, close ones last)
        // This ensures correct layering
        strands.sort((a, b) => a.depth - b.depth);

        strands.forEach(strand => {
            strand.update();
            strand.draw();
        });
        
        mouseSpeedX = 0;

        requestAnimationFrame(animate);
    }

    window.addEventListener('resize', resize);
    resize();
    animate();
</script>
